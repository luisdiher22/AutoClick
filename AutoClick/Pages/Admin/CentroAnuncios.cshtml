<!-- Modal de Editar Valor Fiscal -->
<div id="modalEditar" class="modal">
    <div class="modal-content" style="max-width: 500px;">
        <div class="modal-header">
            <h2 class="modal-title">Editar Valor Fiscal</h2>
            <span class="close" onclick="cerrarModal('modalEditar')">&times;</span>
        </div>
        <div class="modal-body">
            <form id="formEditarValorFiscal" onsubmit="return guardarValorFiscal(event)">
                <input type="hidden" id="edit-anuncio-id" />
                
                <div class="form-group">
                    <label class="form-label">Valor Fiscal Original</label>
                    <input type="text" class="form-input" id="edit-valor-original" disabled />
                </div>

                <div class="form-group">
                    <label class="form-label">Nuevo Valor Fiscal *</label>
                    <input type="number" step="0.01" class="form-input" id="edit-valor-nuevo" required placeholder="Ingrese el nuevo valor fiscal" />
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn-cancel" onclick="cerrarModal('modalEditar')">Cancelar</button>
            <button class="btn-submit" onclick="document.getElementById('formEditarValorFiscal').requestSubmit()">Guardar Cambios</button>
        </div>
    </div>
</div>

<script>
    function verDetalles(id) {
        fetch(`/Admin/CentroAnuncios?handler=Detalles&id=${id}`)
            .then(response => response.json())
            .then(data => {
                // Llenar los campos del modal con los datos del anuncio
                document.getElementById('det-marca').textContent = data.marca || 'N/A';
                document.getElementById('det-modelo').textContent = data.modelo || 'N/A';
                document.getElementById('det-ano').textContent = data.ano || 'N/A';
                document.getElementById('det-placa').textContent = data.placaVehiculo || 'N/A';
                document.getElementById('det-precio').textContent = `${data.divisa} ${parseFloat(data.precio).toLocaleString('es-CR', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
                document.getElementById('det-valor-fiscal').textContent = data.valorFiscal ? parseFloat(data.valorFiscal).toLocaleString('es-CR', {minimumFractionDigits: 2, maximumFractionDigits: 2}) : 'No establecido';
                document.getElementById('det-carroceria').textContent = data.carroceria || 'N/A';
                document.getElementById('det-combustible').textContent = data.combustible || 'N/A';
                document.getElementById('det-transmision').textContent = data.transmision || 'N/A';
                document.getElementById('det-traccion').textContent = data.traccion || 'N/A';
                document.getElementById('det-kilometraje').textContent = data.kilometraje ? `${parseInt(data.kilometraje).toLocaleString()} ${data.unidadKilometraje}` : 'N/A';
                document.getElementById('det-condicion').textContent = data.condicion || 'N/A';
                document.getElementById('det-color-ext').textContent = data.colorExterior || 'N/A';
                document.getElementById('det-color-int').textContent = data.colorInterior || 'N/A';
                document.getElementById('det-puertas').textContent = data.numeroPuertas || 'N/A';
                document.getElementById('det-pasajeros').textContent = data.numeroPasajeros || 'N/A';
                document.getElementById('det-provincia').textContent = data.provincia || 'N/A';
                document.getElementById('det-canton').textContent = data.canton || 'N/A';
                document.getElementById('det-descripcion').textContent = data.descripcion || 'N/A';
                document.getElementById('det-email').textContent = data.emailPropietario || 'N/A';
                
                // Formatear fecha
                if (data.fechaCreacion) {
                    const fecha = new Date(data.fechaCreacion);
                    document.getElementById('det-fecha').textContent = fecha.toLocaleString('es-CR');
                } else {
                    document.getElementById('det-fecha').textContent = 'N/A';
                }

                // Mostrar modal
                document.getElementById('modalDetalles').style.display = 'block';
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error al cargar los detalles del anuncio');
            });
    }

    function editarValorFiscal(id, valorActual) {
        document.getElementById('edit-anuncio-id').value = id;
        document.getElementById('edit-valor-original').value = valorActual > 0 ? parseFloat(valorActual).toLocaleString('es-CR', {minimumFractionDigits: 2, maximumFractionDigits: 2}) : 'No establecido';
        document.getElementById('edit-valor-nuevo').value = '';
        
        document.getElementById('modalEditar').style.display = 'block';
    }

    function guardarValorFiscal(event) {
        event.preventDefault();
        
        const id = document.getElementById('edit-anuncio-id').value;
        const nuevoValor = document.getElementById('edit-valor-nuevo').value;

        if (!nuevoValor || parseFloat(nuevoValor) < 0) {
            alert('Por favor ingrese un valor fiscal v치lido');
            return false;
        }

        const formData = new FormData();
        formData.append('id', id);
        formData.append('nuevoValorFiscal', nuevoValor);
        formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

        fetch('/Admin/CentroAnuncios?handler=ActualizarValorFiscal', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
                location.reload(); // Recargar la p치gina para ver los cambios
            } else {
                alert('Error al actualizar el valor fiscal');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error al guardar los cambios');
        });

        return false;
    }

    function cerrarModal(modalId) {
        document.getElementById(modalId).style.display = 'none';
    }

    // Cerrar modal al hacer clic fuera de 칠l
    window.onclick = function(event) {
        if (event.target.classList.contains('modal')) {
            event.target.style.display = 'none';
        }
    }

    // Cerrar modal con ESC
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            document.querySelectorAll('.modal').forEach(modal => {
                modal.style.display = 'none';
            });
        }
    });
</script>
