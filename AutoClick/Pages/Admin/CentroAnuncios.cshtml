@page
@model AutoClick.Pages.Admin.CentroAnunciosModel
@{
    ViewData["Title"] = "Centro de Anuncios";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    /* Reset body styles for admin dashboard */
    body {
        margin: 0;
        padding: 0;
        background: #02081C !important;
        font-family: 'Montserrat', sans-serif !important;
        overflow-x: hidden;
    }
    
    .main-container {
        background: #02081C !important;
        min-height: 100vh;
        position: relative;
        width: 100%;
        overflow: hidden;
    }
    
    /* Admin Dashboard Container */
    .admin-dashboard-container {
        width: 100%;
        min-height: 100vh;
        position: relative;
        background: #02081C;
        overflow-x: hidden;
        overflow-y: auto;
    }
    
    /* Main Content Area */
    .admin-main-content {
        margin-left: 376px;
        padding: 120px 40px 40px 40px;
        background: #02081C;
    }
    
    /* Page Title */
    .page-title {
        color: white;
        font-size: 36px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 800;
        margin-bottom: 8px;
        margin-top: 0;
        letter-spacing: -0.5px;
    }
    
    .page-subtitle {
        color: rgba(255, 255, 255, 0.6);
        font-size: 14px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 400;
        margin-top: 16px;
        margin-bottom: 32px;
    }

    /* Table Container */
    .table-container {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
        margin-top: 32px;
    }

    /* Table Styles */
    .anuncios-table {
        width: 100%;
        border-collapse: collapse;
        color: white;
    }

    .anuncios-table thead {
        background: rgba(255, 255, 255, 0.1);
    }

    .anuncios-table thead th {
        padding: 16px;
        text-align: left;
        font-size: 14px;
        font-weight: 700;
        font-family: 'Montserrat', sans-serif;
        color: rgba(255, 255, 255, 0.9);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .anuncios-table tbody tr {
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        transition: background-color 0.2s ease;
    }

    .anuncios-table tbody tr:hover {
        background: rgba(255, 255, 255, 0.05);
    }

    .anuncios-table tbody tr.sin-valor-fiscal {
        background: rgba(255, 50, 50, 0.1);
    }

    .anuncios-table tbody tr.sin-valor-fiscal:hover {
        background: rgba(255, 50, 50, 0.15);
    }

    .anuncios-table tbody td {
        padding: 14px 16px;
        font-size: 14px;
        font-weight: 400;
        font-family: 'Montserrat', sans-serif;
        color: rgba(255, 255, 255, 0.8);
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 8px;
    }

    .btn-action {
        padding: 8px 16px;
        border-radius: 6px;
        border: none;
        font-size: 13px;
        font-weight: 600;
        font-family: 'Montserrat', sans-serif;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-detalles {
        background: rgba(59, 130, 246, 0.2);
        color: #60A5FA;
        border: 1px solid rgba(59, 130, 246, 0.3);
    }

    .btn-detalles:hover {
        background: rgba(59, 130, 246, 0.3);
        border-color: rgba(59, 130, 246, 0.5);
    }

    .btn-editar {
        background: rgba(34, 197, 94, 0.2);
        color: #4ADE80;
        border: 1px solid rgba(34, 197, 94, 0.3);
    }

    .btn-editar:hover {
        background: rgba(34, 197, 94, 0.3);
        border-color: rgba(34, 197, 94, 0.5);
    }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(5px);
    }

    .modal-content {
        background: #030D2B;
        margin: 5% auto;
        padding: 0;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        width: 90%;
        max-width: 800px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    .modal-header {
        padding: 24px 32px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title {
        color: white;
        font-size: 24px;
        font-weight: 700;
        font-family: 'Montserrat', sans-serif;
        margin: 0;
    }

    .close {
        color: rgba(255, 255, 255, 0.6);
        font-size: 32px;
        font-weight: 300;
        cursor: pointer;
        transition: color 0.2s ease;
        line-height: 1;
    }

    .close:hover {
        color: white;
    }

    .modal-body {
        padding: 32px;
        color: rgba(255, 255, 255, 0.8);
        max-height: 70vh;
        overflow-y: auto;
    }

    .modal-footer {
        padding: 20px 32px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        text-align: right;
    }

    /* Details Modal Styles */
    .detail-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .detail-item {
        margin-bottom: 8px;
    }

    .detail-label {
        font-size: 12px;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.5);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 4px;
    }

    .detail-value {
        font-size: 15px;
        font-weight: 500;
        color: rgba(255, 255, 255, 0.9);
        word-wrap: break-word;
    }

    /* Form Styles */
    .form-group {
        margin-bottom: 24px;
    }

    .form-label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 8px;
        font-family: 'Montserrat', sans-serif;
    }

    .form-input {
        width: 100%;
        padding: 12px 16px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        color: white;
        font-size: 15px;
        font-family: 'Montserrat', sans-serif;
        transition: all 0.2s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: rgba(59, 130, 246, 0.5);
        background: rgba(255, 255, 255, 0.08);
    }

    .form-input:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .btn-submit {
        background: linear-gradient(135deg, #3B82F6, #2563EB);
        color: white;
        padding: 12px 32px;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        font-family: 'Montserrat', sans-serif;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-submit:hover {
        background: linear-gradient(135deg, #2563EB, #1D4ED8);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
    }

    .btn-cancel {
        background: transparent;
        color: rgba(255, 255, 255, 0.6);
        padding: 12px 32px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        font-family: 'Montserrat', sans-serif;
        cursor: pointer;
        margin-right: 12px;
        transition: all 0.2s ease;
    }

    .btn-cancel:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.3);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: rgba(255, 255, 255, 0.5);
    }

    .empty-state-icon {
        font-size: 64px;
        margin-bottom: 16px;
        opacity: 0.3;
    }

    .empty-state-text {
        font-size: 18px;
        font-weight: 500;
        font-family: 'Montserrat', sans-serif;
    }

    /* Scrollbar Styles */
    .modal-body::-webkit-scrollbar {
        width: 8px;
    }

    .modal-body::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 4px;
    }

    .modal-body::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 4px;
    }

    .modal-body::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.3);
    }

    /* Estilos de paginaci칩n */
    .paginacion-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 24px;
        gap: 8px;
    }

    .btn-paginacion {
        padding: 8px 16px;
        background: rgba(255, 255, 255, 0.15);
        border: 0.5px solid rgba(255, 255, 255, 0.25);
        border-radius: 8px;
        color: #F7F7F7;
        font-family: 'Montserrat', sans-serif;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

    .btn-paginacion:hover:not(.disabled) {
        background: rgba(255, 147, 30, 0.2);
        border-color: #FF931E;
        transform: translateY(-2px);
    }

    .btn-paginacion.disabled {
        opacity: 0.3;
        cursor: not-allowed;
        pointer-events: none;
    }

    .paginacion-info {
        color: #F7F7F7;
        font-family: 'Montserrat', sans-serif;
        font-size: 14px;
        font-weight: 500;
        margin: 0 12px;
    }

    .total-registros {
        color: rgba(255, 255, 255, 0.7);
        font-size: 14px;
        margin-top: 20px;
    }

    .total-registros strong {
        color: #FF931E;
    }
</style>

<div class="main-container">
    <div class="admin-dashboard-container">
        @await Html.PartialAsync("_AdminSidebar")
        <form method="post" style="display: none;">
            @Html.AntiForgeryToken()
        </form>

        <div class="admin-main-content">
            <h1 class="page-title">Centro de Anuncios</h1>
            <p class="page-subtitle">Administra todos los anuncios de veh칤culos publicados en la plataforma</p>

            <div class="table-container">
                @if (Model.Anuncios.Count > 0)
                {
                    <table class="anuncios-table">
                        <thead>
                            <tr>
                                <th>Placa</th>
                                <th>Modelo</th>
                                <th>Marca</th>
                                <th>A침o</th>
                                <th>Valor Fiscal</th>
                                <th>Valor</th>
                                <th style="width: 200px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var anuncio in Model.Anuncios)
                            {
                                <tr class="@(anuncio.ValorFiscal == null || anuncio.ValorFiscal == 0 ? "sin-valor-fiscal" : "")" data-id="@anuncio.Id">
                                    <td>@anuncio.PlacaVehiculo</td>
                                    <td>@anuncio.Modelo</td>
                                    <td>@anuncio.Marca</td>
                                    <td>@anuncio.Ano</td>
                                    <td>@(anuncio.ValorFiscal?.ToString("N2") ?? "No establecido")</td>
                                    <td>@anuncio.Divisa @anuncio.Precio.ToString("N2")</td>
                                    <td>
                                        <div class="action-buttons">
                                            <button class="btn-action btn-detalles" onclick="verDetalles(@anuncio.Id)">
                                                Detalles
                                            </button>
                                            <button class="btn-action btn-editar" onclick="editarValorFiscal(@anuncio.Id, @(anuncio.ValorFiscal ?? 0))">
                                                Editar
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-state-icon">游늶</div>
                        <div class="empty-state-text">No hay anuncios registrados en el sistema</div>
                    </div>
                }
            </div>

            <!-- Paginaci칩n -->
            @if (Model.TotalPaginas > 1)
            {
                <div class="paginacion-wrapper">
                    <a href="?PaginaActual=@(Model.PaginaActual - 1)" 
                       class="btn-paginacion @(Model.PaginaActual <= 1 ? "disabled" : "")">
                        Anterior
                    </a>
                    
                    <span class="paginacion-info">
                        P치gina @Model.PaginaActual de @Model.TotalPaginas
                    </span>
                    
                    <a href="?PaginaActual=@(Model.PaginaActual + 1)" 
                       class="btn-paginacion @(Model.PaginaActual >= Model.TotalPaginas ? "disabled" : "")">
                        Siguiente
                    </a>
                </div>
            }

            <!-- Total de registros -->
            @if (Model.TotalRegistros > 0)
            {
                <div class="total-registros">
                    Total de anuncios: <strong>@Model.TotalRegistros</strong>
                </div>
            }
        </div>
    </div>
</div>

