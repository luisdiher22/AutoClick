@page
@model AutoClick.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Dashboard de Administrador";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    /* Reset body styles for admin dashboard */
    body {
        margin: 0;
        padding: 0;
        background: #02081C !important;
        font-family: 'Montserrat', sans-serif !important;
        overflow-x: hidden;
    }
    
    .main-container {
        background: #02081C !important;
        min-height: 100vh;
        position: relative;
        width: 100%;
        overflow: hidden;
    }
    
    /* Admin Dashboard Container */
    .admin-dashboard-container {
        width: 100%;
        min-height: 100vh;
        position: relative;
        background: #02081C;
        overflow-x: hidden;
        overflow-y: auto;
    }
    
    /* Sidebar - Mantenemos solo lo esencial para responsive */
    
    /* Main Content Area */
    .admin-main-content {
        margin-left: 376px;
        padding: 40px;
        padding-bottom: 0;
        background: #02081C;
    }
    
    /* Page Title */
    .page-title {
        color: rgba(255, 255, 255, 0.5);
        font-size: 32px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        margin-bottom: 48px;
        margin-top: 40px;
    }
    
    /* Section Headers */
    .section-header {
        padding: 16px 16px 16px 0;
        display: flex;
        align-items: center;
        margin-bottom: 16px;
    }
    
    .section-title {
        color: white;
        font-size: 24px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
    }
    
    /* Stats Cards */
    .stats-container {
        width: 100%;
        max-width: 853px;
        padding: 40px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 4px;
        border: 0.5px solid rgba(255, 255, 255, 0.25);
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
    }

    .stat-divider {
        width: 0.5px;
        height: 96px;
        background: rgba(255, 255, 255, 0.25);
    }
    
    .stat-item {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 22px;
    }
    
    .stat-number {
        color: white;
        font-size: 49.87px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        text-align: center;
    }
    
    .stat-label {
        color: white;
        font-size: 22.17px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 500;
        text-align: center;
        width: 207px;
    }
    
    .stat-label-short {
        width: 198px;
    }
    
    /* Footer */
    .admin-footer {
        width: 100vw;
        height: 304px;
        background: #030D2B;
        border-top: 0.5px solid rgba(255, 255, 255, 0.45);
        position: relative;
        margin-top: 80px;
        margin-left: -376px;
        margin-right: -40px;
    }
    
    .footer-content {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 62px;
        padding: 45px 0;
    }
    
    .footer-section {
        display: flex;
        flex-direction: column;
        gap: 40px;
    }
    
    .footer-title {
        color: rgba(255, 255, 255, 0.5);
        font-size: 24px;
        font-family: 'Plus Jakarta Sans', sans-serif;
        font-weight: 700;
    }
    
    .footer-links {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    
    .footer-link {
        color: white;
        font-size: 16px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 400;
        text-decoration: none;
    }
    
    .footer-link:hover {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
    }
    
    .footer-logo {
        width: 289px;
        height: 143px;
        position: absolute;
        left: 40px;
        top: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 32px;
    }
    
    .footer-social {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 48px;
    }

    .footer-social a {
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity 0.2s ease;
    }

    .footer-social a:hover {
        opacity: 0.8;
    }
    
    .footer-copyright {
        position: absolute;
        bottom: 36px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }
    
    .copyright-text {
        color: white;
        font-size: 16px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 300;
        text-align: center;
    }
    
    /* Responsive */
    @@media (max-width: 1200px) {
        .admin-sidebar {
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }
        
        .admin-main-content {
            margin-left: 0;
        }
        
        .stats-container {
            width: 100%;
            max-width: 853px;
        }
        
        .admin-footer {
            margin-left: 0;
        }
    }
</style>

