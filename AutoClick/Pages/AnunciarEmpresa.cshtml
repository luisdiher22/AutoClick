        .contact-text {
            flex: 1;
            padding-top: 50px;
        }
        
        .contact-title {
            color: white;
            font-size: 36px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            text-shadow: 0px 4px 5px rgba(0, 0, 0, 0.50);
            line-height: 1.2;
            max-width: 442px;
        }
        
        /* Form Styles */
        .contact-form {
            width: 505px;
            min-height: 637px;
            max-height: 800px;
            height: auto;
            background: #030D2B;
            border-radius: 4px;
            border: 1px solid rgba(255, 255, 255, 0.25);
            padding: 24px;
            overflow-y: auto;
        }
        
        .form-header h3 {
            color: white;
            font-size: 20px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            margin-bottom: 24px;
        }
        
        .form-section-title {
            color: white;
            font-size: 20px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            margin: 24px 0 16px 0;
        }
        
        .form-group {
            margin-bottom: 24px;
        }
        
        .form-label {
            display: flex;
            align-items: center;
            gap: 4px;
            color: white;
            font-size: 14px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
            margin-bottom: 8px;
        }
        
        .required {
            color: #FF0000;
        }
        
        .form-control {
            width: 100%;
            height: 44px;
            padding: 8px 16px;
            background: #02081C;
            border: 0.5px solid rgba(255, 255, 255, 0.5);
            border-radius: 4px;
            color: white;
            font-size: 14px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
            transition: border-color 0.3s ease;
            box-sizing: border-box;
        }
        
        .form-control:focus {
            outline: none;
            border-color: #FF931E;
        }
        
        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }
        
