        /* Contact Section */
        .contact-section {
            position: relative;
            width: 100%;
            height: 920px;
            overflow: hidden;
        }
        
        .contact-background {
            position: relative;
            width: 100%;
            height: 100%;
        }
        
        .contact-bg-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .contact-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(270deg, rgba(0, 0, 0, 0.80) 16%, rgba(0, 0, 0, 0) 50%, rgba(0, 0, 0, 0.80) 89%);
