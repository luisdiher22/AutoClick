}

@section Styles {
    <style>
        /* Anunciar Empresa Page Styles */
        body {
            background: #02081C;
            margin: 0;
            padding: 0;
        }
        
        .main-container {
            background: #02081C;
            min-height: 100vh;
        }
        
        .page-content {
            width: 100%;
            background: #02081C;
            overflow: hidden;
        }
        
        /* Breadcrumb Styles */
        .breadcrumb-section {
            position: relative;
            z-index: 10;
            padding: 8px 32px 8px 32px;
            background: #02081C;
        }
        
        .breadcrumb-nav {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 0;
        }
        
        .breadcrumb-item {
            color: white;
            font-size: 16px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 400;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        
        .breadcrumb-item:hover {
            color: #FF931E;
        }
        
        .breadcrumb-separator {
            color: white;
            font-size: 16px;
            font-weight: 400;
        }
        
        .breadcrumb-current {
            color: white;
            font-size: 16px;
            font-weight: 400;
        }
        
        /* Hero Section */
        .hero-section {
            position: relative;
            width: 100%;
            height: 888px;
            overflow: hidden;
            margin-top: -24px;
        }
        
        .hero-background {
            position: relative;
            width: 100%;
            height: 100%;
        }
        
        .hero-bg-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(180deg, rgba(0, 0, 0, 0.90) 18%, rgba(0, 0, 0, 0.60) 100%);
        }
        .hero-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: flex;
            align-items: center;
            justify-content: space-between;
            max-width: 1200px;
            width: 100%;
            padding: 0 40px;
            gap: 80px;
            flex-wrap: wrap;
        }
        
        .hero-left {
            flex: 1;
            max-width: 550px;
        }
        
        .hero-right {
            flex: 1;
            max-width: 600px;
        }

        /* Botón en desktop aparece después de hero-left */
        .cta-button {
            position: absolute;
            left: 40px;
            top: calc(50% + 140px);
        }
        
        .hero-title {
            color: white;
            font-size: 36px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            text-shadow: 0px 4px 5px rgba(0, 0, 0, 0.50);
            margin-bottom: 16px;
            line-height: 1.2;
            text-align: left;
        }
        
        .text-orange {
            color: #FF931E;
        }
        
        .hero-subtitle {
            color: #FF931E;
            font-size: 32px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            margin-bottom: 32px;
            text-align: left;
        }
        
        .benefits-list {
            display: flex;
            flex-direction: column;
            gap: 8px;
            align-items: flex-start;
            width: 100%;
        }
        
        .benefit-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 0;
            width: 100%;
        }
        
        .benefit-icon {
            width: 45px;
            height: 45px;
            background: #00CC00;
            border-radius: 50%;
            position: relative;
            flex-shrink: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .benefit-icon::before {
            content: '✓';
            color: white;
            font-weight: bold;
            font-size: 24px;
            line-height: 1;
        }
        
        .benefit-text {
            color: white;
            font-size: 24px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            text-align: left;
            flex: 1;
        }
        
        .cta-button {
            padding: 16px;
            background: white;
            border: none;
            border-radius: 4px;
            color: #06174D;
            font-size: 16px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 389px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .cta-button:hover {
            background: #f0f0f0;
            transform: translateY(-2px);
        }
        
        /* Services Section */
        .services-section {
            padding: 80px 32px;
            background: #02081C;
        }
        
        .services-title {
            color: white;
            font-size: 36px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            text-align: center;
            margin-bottom: 60px;
        }
        
        .services-grid {
            display: flex;
            gap: 89px;
            max-width: 1217px;
            margin: 0 auto;
            justify-content: center;
        }
        
        .service-column {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 64px;
        }
        
        .service-item {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }
        
        .service-title {
            color: #FF931E;
            font-size: 24px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            margin-bottom: 16px;
        }
        
        .service-description {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        
        .service-description p {
            color: white;
            font-size: 16px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
            line-height: 1.5;
            margin: 0;
