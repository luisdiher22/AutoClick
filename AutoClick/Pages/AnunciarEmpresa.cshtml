            padding: 20px;
        }

        .confirmation-content {
            background: #030D2B;
            border-radius: 12px;
            max-width: 400px;
            width: 100%;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            text-align: center;
            padding: 32px 24px 24px 24px;
        }

        .confirmation-icon {
            width: 60px;
            height: 60px;
            margin: 0 auto 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
        }

        .confirmation-icon.success {
            background: rgba(0, 204, 0, 0.2);
            color: #00CC00;
        }

        .confirmation-icon.error {
            background: rgba(255, 0, 0, 0.2);
            color: #ff0000;
        }

        .confirmation-title {
            color: white;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 20px;
            margin: 0 0 12px 0;
        }

        .confirmation-message {
            color: rgba(255, 255, 255, 0.8);
            font-family: 'Montserrat', sans-serif;
            font-size: 14px;
            line-height: 1.6;
            margin: 0 0 24px 0;
        }

        .confirmation-button {
            width: 100%;
            padding: 14px 24px;
            background: white;
            color: #030D2B;
            border: none;
            border-radius: 4px;
