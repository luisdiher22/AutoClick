            height: auto;
            min-height: 88px;
            resize: vertical;
        }
        
        select.form-control {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            background-image: url("data:image/svg+xml,%3Csvg width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L6 6L11 1' stroke='white' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
            background-repeat: no-repeat;
            background-position: right 16px center;
            background-size: 12px 8px;
            padding-right: 40px;
        }

        select.form-control option {
            background: rgba(2, 8, 28, 0.95);
            color: white;
            padding: 12px 8px;
            font-family: 'Montserrat', sans-serif;
            font-size: 14px;
        }
        
        .submit-button {
            width: 100%;
            height: 44px;
            padding: 0;
            background: white;
            border: none;
            border-radius: 4px;
            color: #06174D;
            font-size: 16px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .submit-button:hover {
            background: #f0f0f0;
            transform: translateY(-2px);
        }
        
        /* Error and Success Messages */
        .error-message {
            background: rgba(255, 0, 0, 0.1);
            border: 1px solid #ff0000;
            color: #ff0000;
            padding: 12px;
            border-radius: 4px;
            margin-bottom: 20px;
            font-size: 14px;
        }
        
        .success-message {
            background: rgba(0, 255, 0, 0.1);
            border: 1px solid #00ff00;
            color: #00ff00;
            padding: 12px;
            border-radius: 4px;
            margin-bottom: 20px;
            font-size: 14px;
        }
        
        .validation-error {
            color: #ff0000;
            font-size: 12px;
            margin-top: 4px;
            display: block;
        }
        
        /* FAQ Section */
        .faq-section {
            padding: 80px 32px;
            background: #02081C;
            max-width: 852px;
            margin: 0 auto;
        }
        
        .faq-title {
            color: white;
            font-size: 32px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            margin-bottom: 40px;
            padding-left: 32px;
        }
        
        .faq-list {
            margin-bottom: 60px;
        }
        
        .faq-item {
            border-bottom: 1px solid rgba(255, 255, 255, 0.25);
            cursor: pointer;
        }
        
        .faq-question {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 24px 32px;
            color: white;
            font-size: 16px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            transition: background-color 0.2s ease;
        }
        
        .faq-question:hover {
            background: rgba(255, 255, 255, 0.05);
        }
        
        .faq-toggle {
            width: 12px;
            height: 6px;
            background: white;
            clip-path: polygon(0 0, 100% 0, 50% 100%);
            transition: transform 0.2s ease;
            flex-shrink: 0;
            margin-left: 16px;
        }
        
        .faq-item.active .faq-toggle {
            transform: rotate(180deg);
        }
        
        .faq-answer {
            display: grid;
            grid-template-rows: 0fr;
            transition: grid-template-rows 0.3s ease-out, padding 0.3s ease-out;
            overflow: hidden;
            padding: 0 32px;
        }
        
        .faq-item.active .faq-answer {
            grid-template-rows: 1fr;
            padding: 0 32px 24px 32px;
        }
        
        .faq-answer > div {
            min-height: 0;
        }
        
        .faq-answer p {
            color: #B0B0B0;
            font-size: 14px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 400;
            line-height: 1.6;
            margin: 0;
            padding-top: 8px;
        }
        
        /* Ad Banner */
        .ad-banner {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 4px;
            padding: 29px;
            text-align: center;
            margin-top: 40px;
        }
        
        .ad-logo {
            margin-bottom: 20px;
        }
        
        .ad-title {
            color: white;
            font-size: 29px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.50);
            margin-bottom: 16px;
        }
        
        .ad-subtitle {
            color: white;
            font-size: 19px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
            text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.50);
            margin: 0;
        }
        
        /* Responsive Design */
        @@media (max-width: 1024px) {
            .breadcrumb-section {
                padding: 4px 24px 0 24px;
            }

            .breadcrumb-nav {
                padding-top: 0;
                margin-top: 0;
                margin-bottom: 16px;
            }

            .hero-section {
                position: relative;
                height: auto;
                min-height: 700px;
                padding: 0;
                margin-top: 0;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            
            .hero-background {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border-radius: 0 !important;
            }
            
            .hero-bg-image {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center;
            }
            
            .hero-overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }

            .hero-content {
                position: relative;
                z-index: 2;
                transform: none;
                left: 0;
                gap: 24px;
                padding: 100px 24px 60px 24px;
                flex-direction: column;
                align-items: flex-start;
                max-width: 100%;
                width: 100%;
            }
            
            .hero-left,
            .hero-right {
                max-width: 100%;
                width: 100%;
            }
            
            .hero-title {
                font-size: 24px;
                margin-bottom: 12px;
            }
            
            .hero-subtitle {
                font-size: 20px;
                margin-bottom: 20px;
            }
            
            .benefit-item {
                gap: 12px;
            }
            
            .benefit-icon {
                width: 35px;
                height: 35px;
            }
            
            .benefit-icon::before {
                font-size: 20px;
            }
            
            .benefit-text {
                font-size: 16px;
            }
            
            .cta-button {
                position: static;
                top: auto;
                left: auto;
                width: 100%;
                max-width: 389px;
                margin: 16px auto 0;
            }
            
            .services-grid {
                flex-direction: column;
                gap: 40px;
            }
            
            .contact-content {
                flex-direction: column;
                padding: 20px;
                gap: 20px;
                position: static;
                align-items: center;
            }

            .contact-text {
                display: none;
            }

            .contact-bg-image,
            .contact-overlay {
                display: none;
            }

            .contact-section {
                background: #02081C;
                height: auto;
            }
            
            .contact-form {
                width: 98%;
                max-width: none;
                background: transparent;
                border: none;
                height: auto;
                max-height: none;
                overflow: visible;
                margin: 0 auto;
                padding: 24px 12px;
            }
            
            .brands-container {
                gap: 20px;
            }

            .desktop-only {
                display: none;
            }
        }
        
        @@media (max-width: 768px) {
            .breadcrumb-section {
                padding: 2px 16px 0 16px;
                margin-bottom: 12px;
            }

            .breadcrumb-nav {
                padding-top: 0;
                margin-top: 0;
                margin-bottom: 0;
            }

            .hero-section {
                position: relative;
                height: auto;
                min-height: 650px;
                padding: 0;
                margin-top: 0;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            
            .hero-background {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }
            
            .hero-bg-image {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center;
            }
            
            .hero-overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }

            .hero-content {
                position: relative;
                z-index: 2;
                transform: none;
                left: 0;
                gap: 20px;
                padding: 90px 16px 50px 16px;
                flex-direction: column;
                align-items: flex-start;
                max-width: 100%;
                width: 100%;
            }

            .hero-left,
            .hero-right {
                max-width: 100%;
                width: 100%;
            }
            
            .hero-title {
                font-size: 22px;
                margin-bottom: 12px;
            }
            
            .hero-subtitle {
                font-size: 18px;
                margin-bottom: 16px;
            }
            
            .benefit-item {
                gap: 10px;
            }
            
            .benefit-icon {
                width: 32px;
                height: 32px;
            }
            
            .benefit-icon::before {
                font-size: 18px;
            }
            
            .benefit-text {
                font-size: 15px;
            }

            .cta-button {
                position: static;
                top: auto;
                left: auto;
                width: 100%;
                max-width: 389px;
                margin: 16px auto 0;
            }

            .brands-container {
                flex-wrap: nowrap;
                gap: 16px;
                padding: 0 16px;
            }

            .brand-logo {
                max-width: 30%;
                max-height: 120px;
            }
            
            .services-title,
            .brands-title {
                font-size: 28px;
            }
            
            .contact-title {
                font-size: 28px;
            }

            .contact-form {
                width: 98%;
                max-width: none;
                background: transparent;
                border: none;
                padding: 24px 12px;
            }

            .desktop-only {
                display: none;
            }
        }

        /* Modal de Confirmación */
        .confirmation-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
