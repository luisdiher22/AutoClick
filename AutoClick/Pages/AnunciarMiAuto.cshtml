@page
@model AnunciarMiAutoModel
@{
    ViewData["Title"] = Model.IsEditMode ? "Editar Anuncio - AutoClick.cr" : "Anunciar Mi Auto - AutoClick.cr";
    Layout = "~/Pages/Shared/_LayoutMinimal.cshtml"; // Usar el mismo layout que Index
}

@section Styles {
    <link rel="stylesheet" href="~/css/anunciar-auto.css" />
}

@section Scripts {
    <script src="~/js/anunciar-auto.js"></script>
}

<div class="anunciar-container">

    <!-- Main Content -->
    <div class="anunciar-main">
        <!-- Background Image -->
        <div class="background-image"></div>
        
        <!-- Form Container -->
        <div class="form-container">
            <!-- Form Header -->
            <div class="form-header">
                <h1>Anuncie su auto</h1>
                <span class="section-indicator">Sección: <span id="current-section">1</span>/8</span>
            </div>
            
            <!-- Form Container -->
            <form method="post" enctype="multipart/form-data" id="anuncioForm">
                @Html.AntiForgeryToken()
                
                <!-- Navigation Buttons -->
                <div class="form-nav-buttons">
                    <button type="button" class="btn-back" id="btn-back">
                        <div class="back-arrow"></div>
                        <span>Atrás</span>
                    </button>
                    <button type="button" class="btn-next" id="btn-next">
                        <span>Siguiente sección</span>
                    </button>
                </div>
                
                <!-- Form Sections Container -->
                <div class="form-sections" id="form-sections">
                
                <!-- Section 1: Datos del Vehículo -->
                <div class="form-section active" data-section="1" id="seccion1">
                    <div style="width: 100%; height: 800px; position: relative; overflow: hidden;">
                        @if (Model.IsEditMode)
                        {
                            <div style="left: 20px; top: -20px; position: absolute; background: rgba(34, 197, 94, 0.2); color: #22C55E; padding: 8px 16px; border-radius: 6px; font-size: 12px; font-family: Montserrat; font-weight: 600;">
                                🔧 EDITANDO ANUNCIO ID: @Model.Edit
                            </div>
                        }
                        <div style="left: 20px; top: 10px; position: absolute; text-box-trim: trim-both; text-box-edge: cap alphabetic; color: rgba(255, 255, 255, 0.75); font-size: 18px; font-family: Montserrat; font-weight: 700; word-wrap: break-word">Datos del vehículo</div>
                        
                        <!-- Primera fila: Marca, Modelo, Año, Placa -->
                        <!-- Marca -->
                        <div data-asterizco="true" data-property-1="Default" style="width: 260px; height: 60px; left: 32px; top: 50px; position: absolute">
                            <select asp-for="Formulario.Marca" id="marca" required style="width: 260px; height: 42px; padding-left: 16px; padding-right: 16px; padding-top: 8px; padding-bottom: 8px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: space-between; align-items: center; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;">
                                <option value="">Elija una marca</option>
                                <option value="toyota">Toyota</option>
                                <option value="honda">Honda</option>
                                <option value="nissan">Nissan</option>
                                <option value="hyundai">Hyundai</option>
                                <option value="kia">Kia</option>
                                <option value="mazda">Mazda</option>
                                <option value="chevrolet">Chevrolet</option>
                                <option value="ford">Ford</option>
                                <option value="volkswagen">Volkswagen</option>
                            </select>
                            <div style="left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Marca</div>
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: #FF0000; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">*</div>
                            </div>
                        </div>
                        
                        <!-- Modelo -->
                        <div data-asterizco="true" data-property-1="Default" style="width: 260px; height: 60px; left: 325px; top: 50px; position: absolute">
                            <select id="modelo" name="Formulario.Modelo" required style="width: 260px; height: 42px; padding-left: 16px; padding-right: 16px; padding-top: 8px; padding-bottom: 8px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: space-between; align-items: center; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;">
                                <option value="">Elija un modelo</option>
                                @if (!string.IsNullOrEmpty(Model.Formulario?.Modelo))
                                {
                                    <option value="@Model.Formulario.Modelo" selected>@Model.Formulario.Modelo</option>
                                }
                            </select>
                            <div style="left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Modelo</div>
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: #FF0000; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">*</div>
                            </div>
                        </div>
                        
                        <!-- Año -->
                        <div data-asterizco="true" data-property-1="Default" style="width: 260px; height: 60px; left: 618px; top: 50px; position: absolute">
                            <select asp-for="Formulario.Ano" id="ano" required style="width: 260px; height: 42px; padding-left: 16px; padding-right: 16px; padding-top: 8px; padding-bottom: 8px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: space-between; align-items: center; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;">
                                <option value="">Elija el año</option>
                                @for(int year = DateTime.Now.Year; year >= 1990; year--)
                                {
                                    <option value="@year">@year</option>
                                }
                            </select>
                            <div style="left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Año</div>
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: #FF0000; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">*</div>
                            </div>
                        </div>
                        
                        <!-- Placa -->
                        <div data-estado="Default" data-label2="true" style="width: 260px; height: 60px; left: 910px; top: 50px; position: absolute">
                            <input asp-for="Formulario.PlacaVehiculo" type="text" id="placa" placeholder="Introducir placa (opcional para autos nuevos)" style="width: 260px; height: 42px; padding-top: 8px; padding-bottom: 8px; padding-left: 16px; padding-right: 16px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: flex-start; align-items: center; gap: 8px; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;" />
                            <div style="width: 68.64px; height: 9px; left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Placa del vehículo <span style="color: rgba(255, 255, 255, 0.6); font-weight: 400;">(opcional)</span></div>
                            </div>
                        </div>
                        
                        <!-- Segunda fila: Precio con Divisa -->
                        <!-- Precio -->
                        <div data-estado="Default" data-label2="true" style="width: 196px; height: 60px; left: 32px; top: 140px; position: absolute">
                            <input asp-for="Formulario.Precio" type="number" id="precio" placeholder="Introducir precio" required min="1" max="999999999" step="1" style="width: 196px; height: 42px; padding-top: 8px; padding-bottom: 8px; padding-left: 16px; padding-right: 16px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: flex-start; align-items: center; gap: 8px; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 12px; font-family: Montserrat; font-weight: 500; border: none;" />
                            <div style="left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Precio</div>
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: #FF0000; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">*</div>
                            </div>
                        </div>
                        
                        <!-- Divisa -->
                        <div data-asterizco="true" data-property-1="Default" style="width: 44px; height: 44px; left: 242px; top: 158px; position: absolute">
                            <select asp-for="Formulario.Divisa" id="divisa" required style="width: 44px; height: 44px; padding-left: 8px; padding-right: 8px; padding-top: 10px; padding-bottom: 10px; left: 0px; top: 0px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: space-between; align-items: center; display: inline-flex; color: white; font-size: 12px; font-family: Montserrat; font-weight: 500; border: none;">
                                <option value="CRC" selected="@(Model.Formulario?.Divisa == "CRC" ? "selected" : null)">CRC</option>
                                <option value="USD" selected="@(Model.Formulario?.Divisa == "USD" ? "selected" : null)">USD</option>
                            </select>
                        </div>
                        
                        <!-- Tercera fila: Carrocería, Combustible, Cilindrada -->
                        <!-- Carrocería -->
                        <div data-asterizco="true" data-property-1="Default" style="width: 260px; height: 60px; left: 32px; top: 280px; position: absolute">
                            <select asp-for="Formulario.Carroceria" id="carroceria" required style="width: 260px; height: 42px; padding-left: 16px; padding-right: 16px; padding-top: 8px; padding-bottom: 8px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: space-between; align-items: center; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;">
                                <option value="">Elija un tipo de carrocería</option>
                                <option value="sedan">Sedán</option>
                                <option value="suv">SUV</option>
                                <option value="hatchback">Hatchback</option>
                                <option value="pickup">Pick-up</option>
                                <option value="coupe">Coupé</option>
                                <option value="convertible">Convertible</option>
                            </select>
                            <div style="left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Carrocería</div>
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: #FF0000; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">*</div>
                            </div>
                        </div>
                        
                        <!-- Combustible -->
                        <div data-asterizco="true" data-property-1="Default" style="width: 260px; height: 60px; left: 325px; top: 280px; position: absolute">
                            <select asp-for="Formulario.Combustible" id="combustible" required style="width: 260px; height: 42px; padding-left: 16px; padding-right: 16px; padding-top: 8px; padding-bottom: 8px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: space-between; align-items: center; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;">
                                <option value="">Elija combustible</option>
                                <option value="gasolina">Gasolina</option>
                                <option value="diesel">Diésel</option>
                                <option value="hibrido">Híbrido</option>
                                <option value="electrico">Eléctrico</option>
                            </select>
                            <div style="left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Combustible</div>
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: #FF0000; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">*</div>
                            </div>
                        </div>
                        
                        <!-- Cilindrada -->
                        <div data-estado="Default" data-label2="true" style="width: 260px; height: 60px; left: 618px; top: 280px; position: absolute">
                            <input asp-for="Formulario.Cilindrada" type="number" id="cilindrada" placeholder="Introducir cilindrada (cc)" required min="1" max="10000" step="1" style="width: 260px; height: 42px; padding-top: 8px; padding-bottom: 8px; padding-left: 16px; padding-right: 16px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: flex-start; align-items: center; gap: 8px; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;">
                            <div style="width: 68.39px; height: 9px; left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Cilindrada</div>
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: #FF0000; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">*</div>
                            </div>
                        </div>
                        
                        <!-- Cuarta fila: Color Exterior, Color Interior, Puertas, Pasajeros -->
                        <!-- Color Exterior -->
                        <div data-estado="Default" data-label2="true" style="width: 260px; height: 60px; left: 32px; top: 370px; position: absolute">
                            <input asp-for="Formulario.ColorExterior" type="text" id="color-exterior" placeholder="Introducir color exterior" required style="width: 260px; height: 42px; padding-top: 8px; padding-bottom: 8px; padding-left: 16px; padding-right: 16px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: flex-start; align-items: center; gap: 8px; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;">
                            <div style="width: 68.64px; height: 9px; left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Color exterior</div>
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: #FF0000; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">*</div>
                            </div>
                        </div>
                        
                        <!-- Color Interior -->
                        <div data-estado="Default" data-label2="true" style="width: 260px; height: 60px; left: 325px; top: 370px; position: absolute">
                            <input asp-for="Formulario.ColorInterior" type="text" id="color-interior" placeholder="Introducir color interior" required style="width: 260px; height: 42px; padding-top: 8px; padding-bottom: 8px; padding-left: 16px; padding-right: 16px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: flex-start; align-items: center; gap: 8px; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;">
                            <div style="width: 68.64px; height: 9px; left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Color interior</div>
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: #FF0000; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">*</div>
                            </div>
                        </div>
                        
                        <!-- Puertas -->
                        <div data-asterizco="true" data-property-1="Default" style="width: 260px; height: 60px; left: 618px; top: 370px; position: absolute">
                            <select asp-for="Formulario.NumeroPuertas" id="puertas" required style="width: 260px; height: 42px; padding-left: 16px; padding-right: 16px; padding-top: 8px; padding-bottom: 8px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: space-between; align-items: center; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;">
                                <option value="">Elija # de puertas</option>
                                <option value="2">2 puertas</option>
                                <option value="3">3 puertas</option>
                                <option value="4">4 puertas</option>
                                <option value="5">5 puertas</option>
                            </select>
                            <div style="left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Puertas</div>
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: #FF0000; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">*</div>
                            </div>
                        </div>
                        
                        <!-- Pasajeros -->
                        <div data-asterizco="true" data-property-1="Default" style="width: 260px; height: 60px; left: 910px; top: 370px; position: absolute">
                            <select asp-for="Formulario.NumeroPasajeros" id="pasajeros" required style="width: 260px; height: 42px; padding-left: 16px; padding-right: 16px; padding-top: 8px; padding-bottom: 8px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: space-between; align-items: center; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;">
                                <option value="">Elija # de pasajeros</option>
                                <option value="2">2 pasajeros</option>
                                <option value="4">4 pasajeros</option>
                                <option value="5">5 pasajeros</option>
                                <option value="7">7 pasajeros</option>
                                <option value="8">8+ pasajeros</option>
                            </select>
                            <div style="left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Pasajeros</div>
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: #FF0000; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">*</div>
                            </div>
                        </div>
                        
                        <!-- Quinta fila: Transmisión, Tracción, Kilometraje, Condición -->
                        <!-- Transmisión -->
                        <div data-asterizco="true" data-property-1="Default" style="width: 260px; height: 60px; left: 32px; top: 460px; position: absolute">
                            <select asp-for="Formulario.Transmision" id="transmision" required style="width: 260px; height: 42px; padding-left: 16px; padding-right: 16px; padding-top: 8px; padding-bottom: 8px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: space-between; align-items: center; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;">
                                <option value="">Elija transmisión</option>
                                <option value="manual">Manual</option>
                                <option value="automatica">Automática</option>
                                <option value="cvt">CVT</option>
                            </select>
                            <div style="left: 0px; top: 0px; position: absolute; justify-content: flex-start; align-items: center; gap: 4px; display: inline-flex">
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: white; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">Transmisión</div>
                                <div style="text-box-trim: trim-both; text-box-edge: cap alphabetic; color: #FF0000; font-size: 14px; font-family: Montserrat; font-weight: 500; word-wrap: break-word">*</div>
                            </div>
                        </div>
                        
                        <!-- Tracción -->
                        <div data-asterizco="true" data-property-1="Default" style="width: 260px; height: 60px; left: 325px; top: 460px; position: absolute">
                            <select asp-for="Formulario.Traccion" id="traccion" required style="width: 260px; height: 42px; padding-left: 16px; padding-right: 16px; padding-top: 8px; padding-bottom: 8px; left: 0px; top: 18px; position: absolute; background: #02081C; border-radius: 4px; outline: 0.50px rgba(255, 255, 255, 0.50) solid; outline-offset: -0.50px; justify-content: space-between; align-items: center; display: inline-flex; color: rgba(255, 255, 255, 0.50); font-size: 14px; font-family: Montserrat; font-weight: 500; border: none;">
                                <option value="">Elija tracción</option>
                                <option value="delantera">Delantera</option>
                                <option value="trasera">Trasera</option>
                                <option value="integral">Integral</option>
