@page
@model AutoClick.Pages.ContactanosModel
@{
    ViewData["Title"] = "Contáctanos - AutoClick.cr";
}

@section Styles {
<link rel="stylesheet" href="~/css/reportar-problema.css" asp-append-version="true" />
}

<div class="reportar-problema-container">
    <div class="reportar-problema-content">
        <div class="form-panel">
            <div class="panel-header">
                <h1 class="panel-title">Contáctenos</h1>
            </div>

            <form method="post" class="reportar-form">
                <div class="section-header">
                    <h2>Datos de contacto</h2>
                </div>

                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger">
                        <ul class="error-list">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <div class="form-row">
                <div class="form-group">
                    <label asp-for="Nombre" class="form-label">
                        Nombre
                        <span class="required">*</span>
                    </label>
                    <input asp-for="Nombre" class="form-input" placeholder="Introduzca su nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Apellido" class="form-label">
                        Apellido
                        <span class="required">*</span>
                    </label>
                    <input asp-for="Apellido" class="form-input" placeholder="Introduzca su apellido" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group full-width">
                <label asp-for="Email" class="form-label">
                    Correo electrónico
                    <span class="required">*</span>
                </label>
                <input asp-for="Email" type="email" class="form-input" placeholder="Introduzca su correo electrónico" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="TipoConsulta" class="form-label">
                        Tipo de consulta
                        <span class="required">*</span>
                    </label>
                    <select asp-for="TipoConsulta" class="form-select">
                        <option value="">Seleccione tipo de consulta</option>
                        <option value="Consulta General">Consulta General</option>
                        <option value="Soporte Técnico">Soporte Técnico</option>
                        <option value="Publicar Anuncio">Publicar Anuncio</option>
                        <option value="Problema con Anuncio">Problema con Anuncio</option>
                        <option value="Facturación">Facturación</option>
                        <option value="Sugerencias">Sugerencias</option>
                        <option value="Otro">Otro</option>
                    </select>
                    <span asp-validation-for="TipoConsulta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefono" class="form-label">
                        Teléfono
                        <span class="required">*</span>
                    </label>
                    <input asp-for="Telefono" type="tel" class="form-input" placeholder="Introduzca su número" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group full-width">
                <label asp-for="ConfirmEmail" class="form-label">
                    Confirmar correo electrónico
                    <span class="required">*</span>
                </label>
                <input asp-for="ConfirmEmail" type="email" class="form-input" placeholder="Confirme su correo electrónico" />
                <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
            </div>

                <div class="form-group full-width">
                    <label asp-for="Mensaje" class="form-label">
                        Cuéntenos acerca de su consulta
                        <span class="required">*</span>
                    </label>
                    <textarea asp-for="Mensaje" class="form-textarea" rows="6" placeholder="Escriba su mensaje"></textarea>
                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                </div>

                <div class="submit-section">
                    <button type="submit" class="submit-btn">
                        Enviar
                    </button>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="success-message">
                    @Model.SuccessMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">
                    @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}