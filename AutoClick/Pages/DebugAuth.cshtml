@page "/debug-auth"
@model AutoClick.Pages.DebugAuthModel
@{
    ViewData["Title"] = "Debug Auth";
}

<div style="padding: 40px; background: #02081C; color: white; min-height: 100vh; font-family: monospace;">
    <h1>Debug - Información de Autenticación</h1>
    
    <div style="margin: 20px 0; padding: 20px; border: 1px solid #444; border-radius: 4px;">
        <h3>Estado de Sesión:</h3>
        <p>Session Available: @(HttpContext.Session != null ? "Sí" : "No")</p>
        @if(HttpContext.Session != null)
        {
            <p>Session ID: @HttpContext.Session.Id</p>
            <p>TipoUsuario: @HttpContext.Session.GetString("TipoUsuario")</p>
        }
    </div>

    <div style="margin: 20px 0; padding: 20px; border: 1px solid #444; border-radius: 4px;">
        <h3>Resultado:</h3>
        <p>@Model.Message</p>
    </div>

    <div style="margin: 20px 0;">
        <a href="/Auth" style="color: #66ff66;">← Volver a Auth</a> | 
        <a href="/" style="color: #66ff66;">← Volver al Inicio</a>
    </div>
</div>