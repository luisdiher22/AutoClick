@page
@model AutoClick.Pages.FileUploadExampleModel
@{
    ViewData["Title"] = "File Upload Example";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <p class="text-muted">This is an example of how to use the storage service for file uploads. In development, files are stored locally. In production, they're stored in Azure Blob Storage.</p>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Upload File</h5>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="UploadedFile" class="form-label">Choose File</label>
                            <input asp-for="UploadedFile" class="form-control" type="file" />
                            <span asp-validation-for="UploadedFile" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload"></i> Upload
                        </button>
                    </form>
                    
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            <div asp-validation-summary="All"></div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Uploaded Files</h5>
                </div>
                <div class="card-body">
                    @if (Model.UploadedFiles.Any())
                    {
                        <div class="list-group">
                            @foreach (var file in Model.UploadedFiles)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="file-name">
                                        <i class="fas fa-file"></i> @file
                                    </span>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page-handler="Download" asp-route-fileName="@file" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-download"></i> Download
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-fileName="@file" 
                                              class="d-inline" onsubmit="return confirm('Are you sure you want to delete this file?')">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No files uploaded yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info">
                <h6><i class="fas fa-info-circle"></i> Storage Configuration</h6>
                <ul class="mb-0">
                    <li><strong>Development:</strong> Files are stored locally in the <code>LocalStorage</code> folder</li>
                    <li><strong>Production:</strong> Files are stored in Azure Blob Storage</li>
                    <li>You can switch between modes by changing the <code>UseAzureStorage</code> setting in appsettings</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}