<script>
    // Gallery navigation
    document.addEventListener('DOMContentLoaded', function () {
        // Get all image URLs from the server
        const imageUrls = @Html.Raw(Json.Serialize(imageUrlsList));
        let currentImageIndex = 0;

        const mainImage = document.querySelector('.main-car-image');
        const thumbnails = document.querySelectorAll('.thumbnail-item');
        const photoCounter = document.getElementById('photoCounterText');

        // Function to update main image
        window.updateMainImage = function (index) {
            if (index >= 0 && index < imageUrls.length) {
                currentImageIndex = index;
                mainImage.src = imageUrls[index];

                // Update photo counter
                if (photoCounter) {
                    photoCounter.textContent = `${index + 1}/${imageUrls.length}`;
                }

                // Update active thumbnail
                thumbnails.forEach((thumb, i) => {
                    thumb.classList.remove('active');
                    if (i === index) {
                        thumb.classList.add('active');
                    }
                });
            }
        };

        // Navigate gallery with arrows
        window.navigateGallery = function (direction) {
            const newIndex = currentImageIndex + direction;
            if (newIndex >= 0 && newIndex < imageUrls.length) {
                updateMainImage(newIndex);
            }
        };

        // Select thumbnail
        window.selectThumbnail = function (index) {
            updateMainImage(index);
        };

        // Financing calculator logic
        const financingForm = document.getElementById('financingForm');
        if (financingForm) {
            const originalPrice = parseFloat(financingForm.dataset.originalPrice);
            const originalCurrency = financingForm.dataset.originalCurrency;
            const exchangeRate = parseFloat(financingForm.dataset.exchangeRate); // USD to CRC rate
            
            const currencySelect = document.getElementById('currency');
            const vehiclePriceInput = document.getElementById('vehiclePrice');
            const loanTermSelect = document.getElementById('loanTerm');
            const downPaymentInput = document.getElementById('downPayment');
            const monthlyPaymentInput = document.getElementById('monthlyPayment');
            
            // Helper to format currency
            const formatCurrency = (amount, currency) => {
                const formatter = new Intl.NumberFormat('en-US', {
                    style: 'currency',
                    currency: currency,
                    minimumFractionDigits: 0,
                    maximumFractionDigits: 0,
                });
                
                let formatted = formatter.format(amount);
                if (currency === 'CRC') {
                    return '₡' + amount.toLocaleString('es-CR', {minimumFractionDigits: 0, maximumFractionDigits: 0});
                }
                return formatted; // Defaults to $ for USD
            };

            const calculateValues = () => {
                const selectedCurrency = currencySelect.value;
                let currentPrice = originalPrice;

                // Convert price if needed
                if (originalCurrency !== selectedCurrency) {
                    if (originalCurrency === 'USD' && selectedCurrency === 'CRC') {
                        currentPrice = originalPrice * exchangeRate;
                        console.log('Converting USD to CRC:', originalPrice, '*', exchangeRate, '=', currentPrice);
                    } else if (originalCurrency === 'CRC' && selectedCurrency === 'USD') {
                        currentPrice = originalPrice / exchangeRate;
                        console.log('Converting CRC to USD:', originalPrice, '/', exchangeRate, '=', currentPrice);
                    }
                }

                // Update Vehicle Price Display
                vehiclePriceInput.value = formatCurrency(currentPrice, selectedCurrency);

                // Calculate Monthly Payment
                // Formula: P * (r * (1+r)^n) / ((1+r)^n - 1)
                const downPayment = parseFloat(downPaymentInput.value) || 0;
                const loanAmount = currentPrice - downPayment;
                const annualRate = 0.08; // 8% fixed
                const monthlyRate = annualRate / 12;
                const months = parseInt(loanTermSelect.value);

                let monthlyPayment = 0;
                if (loanAmount > 0) {
                    const factor = Math.pow(1 + monthlyRate, months);
                    monthlyPayment = loanAmount * (monthlyRate * factor) / (factor - 1);
                }

                // Update Monthly Payment Display - always show in CRC
                monthlyPaymentInput.value = formatCurrency(monthlyPayment, 'CRC');
            };

            // Event Listeners
            // Track previous currency to handle down payment conversion
            let lastCurrency = currencySelect.value;

            currencySelect.addEventListener('change', () => {
                const selectedCurrency = currencySelect.value;
                console.log('Currency changed from', lastCurrency, 'to', selectedCurrency);
                console.log('Exchange Rate:', exchangeRate);
                
                // Convert down payment if currency changed
                if (lastCurrency !== selectedCurrency) {
                    // Get raw value and remove any non-numeric chars just in case, though type="number" helps
                    const currentDownPayment = parseFloat(downPaymentInput.value) || 0;
                    console.log('Current Down Payment:', currentDownPayment);
                    
                    if (currentDownPayment > 0 && exchangeRate > 0) {
                        let newDownPayment = currentDownPayment;
                        if (lastCurrency === 'USD' && selectedCurrency === 'CRC') {
                            newDownPayment = currentDownPayment * exchangeRate;
                        } else if (lastCurrency === 'CRC' && selectedCurrency === 'USD') {
                            newDownPayment = currentDownPayment / exchangeRate;
                        }
                        
                        console.log('New Down Payment (Calculated):', newDownPayment);
                        
                        // Update input with rounded value
                        downPaymentInput.value = Math.round(newDownPayment);
                    }
                    
                    lastCurrency = selectedCurrency;
                }
                
                calculateValues();
            });

            loanTermSelect.addEventListener('change', calculateValues);
            downPaymentInput.addEventListener('input', calculateValues);

            // Initial calculation to ensure consistency
            calculateValues();
        }
    });

    // Switch tabs function
