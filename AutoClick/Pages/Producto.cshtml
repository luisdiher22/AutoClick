@page "/producto/{id:int}"
@model ProductoModel
@using AutoClick.Helpers
@{
    ViewData["Title"] = $"{Model.Vehicle?.NombreCompleto} - AutoClick.cr";

    // Prepare image URLs for gallery
    var imageUrlsList = Model.Vehicle?.ImagenesUrlsList ?? new List<string>();
    if (imageUrlsList.Count == 0 && !string.IsNullOrEmpty(Model.Vehicle?.ImagenPrincipal))
    {
        imageUrlsList = new List<string> { Model.Vehicle.ImagenPrincipal };
    }
}

<!-- Product Page - Figma Design -->
<div class="producto-page">
    <div class="producto-container">
        <!-- Breadcrumb Navigation -->
        <nav class="producto-breadcrumb">
            <a asp-page="/Index" class="breadcrumb-link">Inicio</a>
            <span class="breadcrumb-separator">/</span>
            <a asp-page="/BusquedaAvanzada" class="breadcrumb-link">Explorar todos los autos</a>
            <span class="breadcrumb-separator">/</span>
            <span class="breadcrumb-current">@Model.Vehicle?.NombreCompleto</span>
        </nav>

        <div class="producto-content">
            <!-- Left Column: Main Content (66.67% width) -->
            <div class="producto-main-content">
                <!-- Image Gallery -->
                @if (Model.Vehicle != null)
                {
                    <div class="producto-gallery">
                        <div class="producto-main-image">
                            @if (!string.IsNullOrEmpty(Model.Vehicle.ImagenPrincipal))
                            {
                                <img src="@Model.Vehicle.ImagenPrincipal" alt="@Model.Vehicle.NombreCompleto"
                                    class="main-car-image" />
                            }

                            <!-- Contador de fotos (responsive only) -->
                            <div class="photo-counter">
                                <span id="photoCounterText">1/@imageUrlsList.Count</span>
                                <img src="~/images/icons/camera-icon.svg" alt="Camera" />
                            </div>

                            <!-- Botón de ver video (responsive only - descomentar cuando se agregue VideoUrl al modelo) -->
                            @* @if (!string.IsNullOrEmpty(Model.Vehicle?.VideoUrl))
                        {
                        <button class="video-button" onclick="openVideoModal()">
                        <img src="~/images/icons/play-icon.svg" alt="Play" />
                        <span>Ver video</span>
                        </button>
                        } *@

                            <!-- Navigation Arrows -->
                            <button class="gallery-nav-btn prev-btn" onclick="navigateGallery(-1)">
                                <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
                                    <circle cx="20" cy="20" r="20" fill="rgba(255, 255, 255, 0.7)" />
                                    <path d="M22 14L16 20L22 26" stroke="black" stroke-width="2" stroke-linecap="round" />
                                </svg>
                            </button>
                            <button class="gallery-nav-btn next-btn" onclick="navigateGallery(1)">
                                <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
                                    <circle cx="20" cy="20" r="20" fill="rgba(255, 255, 255, 0.7)" />
                                    <path d="M18 14L24 20L18 26" stroke="black" stroke-width="2" stroke-linecap="round" />
                                </svg>
                            </button>
                        </div>

                        <!-- Thumbnail Gallery -->
                        @if (imageUrlsList.Count > 0)
                        {
                            <div class="producto-thumbnails">
                                @{
                                    var maxThumbnails = Math.Min(8, imageUrlsList.Count);
                                }
                                @for (int i = 0; i < maxThumbnails; i++)
                                {
                                    <div class="thumbnail-item @(i == 0 ? "active" : "")" data-index="@i"
                                        onclick="selectThumbnail(@i)">
                                        @if (i == 7 && imageUrlsList.Count > 8)
                                        {
                                            <img src="@imageUrlsList[i]" alt="Más imágenes" />
                                            <div class="thumbnail-overlay">
                                                <svg width="20" height="20" viewBox="0 0 20 20" fill="white">
                                                    <path d="M10 4V16M4 10H16" stroke="white" stroke-width="2" stroke-linecap="round" />
                                                </svg>
                                            </div>
                                        }
                                        else
                                        {
                                            <img src="@imageUrlsList[i]" alt="@Model.Vehicle.NombreCompleto vista @(i + 1)" />
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }

                <!-- Description Section -->
                @if (Model.Vehicle != null)
                {
                    <section class="producto-description">
                        <h2>Descripción</h2>
                        <p>@Model.Vehicle.Descripcion</p>
                    </section>
                }

                <!-- Specifications Section -->
                @if (Model.Vehicle != null)
                {
                    <section class="producto-specifications">
                        <h2>Especificaciones</h2>
                        <div class="specifications-grid">
                            <!-- Column 1 -->
                            <div class="spec-column">
                                <div class="spec-item">
                                    <h3>Marca</h3>
                                    <p>@(string.IsNullOrEmpty(Model.Vehicle.Marca) ? "" :
                                             char.ToUpper(Model.Vehicle.Marca[0]) + Model.Vehicle.Marca.Substring(1).ToLower())
                                    </p>
                                </div>
                                <div class="spec-item">
                                    <h3>Modelo</h3>
                                    <p>@(string.IsNullOrEmpty(Model.Vehicle.Modelo) ? "" :
                                             char.ToUpper(Model.Vehicle.Modelo[0]) + Model.Vehicle.Modelo.Substring(1).ToLower())
                                    </p>
                                </div>
                                <div class="spec-item">
                                    <h3>Año</h3>
                                    <p>@Model.Vehicle.Ano</p>
                                </div>
                            </div>

                            <!-- Column 2 -->
                            <div class="spec-column">
                                <div class="spec-item">
                                    <h3>Kilometraje</h3>
                                    <p>@Model.FormatKilometrage(Model.Vehicle.Kilometraje)</p>
                                </div>
                                <div class="spec-item">
                                    <h3>Carrocería</h3>
                                    <p>@(string.IsNullOrEmpty(Model.Vehicle.Carroceria) ? "" :
                                             char.ToUpper(Model.Vehicle.Carroceria[0]) +
                                             Model.Vehicle.Carroceria.Substring(1).ToLower())</p>
                                </div>
                                <div class="spec-item">
                                    <h3>Número de puertas</h3>
                                    <p>@Model.Vehicle.NumeroPuertas</p>
                                </div>
                            </div>

                            <!-- Column 3 -->
                            <div class="spec-column">
                                <div class="spec-item">
                                    <h3>Motor</h3>
                                    <p>@Model.Vehicle.Cilindrada</p>
                                </div>
                                <div class="spec-item">
                                    <h3>Propulsión</h3>
                                    <p>@(string.IsNullOrEmpty(Model.Vehicle.Combustible) ? "" :
                                             char.ToUpper(Model.Vehicle.Combustible[0]) +
                                             Model.Vehicle.Combustible.Substring(1).ToLower())</p>
                                </div>
                                <div class="spec-item">
                                    <h3>Transmisión</h3>
                                    <p>@(string.IsNullOrEmpty(Model.Vehicle.Transmision) ? "" :
                                             char.ToUpper(Model.Vehicle.Transmision[0]) +
                                             Model.Vehicle.Transmision.Substring(1).ToLower())</p>
                                </div>
                            </div>
                        </div>
                    </section>
                }

                <!-- Equipment Section -->
                @if (Model.Vehicle != null)
                {
                    var allExtras = new List<string>();
                    allExtras.AddRange(Model.Vehicle.ExtrasExteriorList ?? new List<string>());
                    allExtras.AddRange(Model.Vehicle.ExtrasInteriorList ?? new List<string>());
                    allExtras.AddRange(Model.Vehicle.ExtrasMultimediaList ?? new List<string>());
                    allExtras.AddRange(Model.Vehicle.ExtrasSeguridadList ?? new List<string>());
                    allExtras.AddRange(Model.Vehicle.ExtrasRendimientoList ?? new List<string>());
                    allExtras.AddRange(Model.Vehicle.ExtrasAntiRoboList ?? new List<string>());
                    allExtras = allExtras.Where(e => !string.IsNullOrEmpty(e)).ToList();

                    if (allExtras.Count > 0)
                    {
                        <section class="producto-equipment">
                            <h2>Equipamiento</h2>
                            <div class="equipment-divider"></div>
                            <div class="equipment-grid">
                                @foreach (var item in allExtras)
                                {
                                    <ul class="equipment-item">
                                        <li>@ExtrasHelper.GetDisplayName(item)</li>
                                    </ul>
                                }
                            </div>
                        </section>
                    }
                }
            </div>

            <!-- Right Sidebar (33.33% width) -->
            <div class="producto-sidebar">
                <!-- Car Information Card -->
                <div class="producto-info-card">
                    <div class="info-card-content">
                        <h1 class="producto-car-title">@Model.Vehicle?.NombreCompleto</h1>
                        <p class="producto-car-mileage">@Model.FormatKilometrage(Model.Vehicle?.Kilometraje ?? 0)</p>
                        <p class="producto-car-price">@Model.Vehicle?.PrecioEnCRC</p>

                        <div class="producto-payment-estimate">
                            <p class="estimate-label">Cuota estimada:</p>
                            <p class="estimate-value">@Model.FormatPrice(Model.MonthlyPayment)/mes</p>
                        </div>
                    </div>

                    <!-- Botones de contacto responsive (solo visible en mobile/tablet) -->
                    @if (Model.Vehicle?.Propietario != null)
                    {
                        <div class="producto-contact-buttons-responsive">
                            <button class="contact-call-btn-responsive"
                                onclick="window.location.href='tel:@Model.Vehicle.Propietario.NumeroTelefono'">
                                <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
                                    <path
                                        d="M3 3h2l1.5 4-1.5 1.5c1 2 2.5 3.5 4.5 4.5L11 11.5l4 1.5v2c0 1.1-.9 2-2 2C6.477 17 2 12.523 2 6c0-1.1.9-2 2-2z"
                                        stroke="currentColor" stroke-width="1.5" />
                                </svg>
                                <span>Llamar</span>
                            </button>

                            <button class="contact-whatsapp-btn-responsive"
                                onclick="window.open('https://wa.me/@(Model.Vehicle.Propietario.NumeroTelefono?.Replace("+", "").Replace("-", "").Replace(" ", ""))', '_blank')">
                                <svg width="18" height="18" viewBox="0 0 20 20" fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <g clip-path="url(#clip0_card_resp)">
                                        <path
                                            d="M14.5893 11.9223L14.5818 11.9848C12.7493 11.0715 12.5576 10.9498 12.3209 11.3048C12.1568 11.5506 11.6784 12.1081 11.5343 12.2731C11.3884 12.4356 11.2434 12.4481 10.9959 12.3356C10.7459 12.2106 9.94345 11.9481 8.99345 11.0981C8.25345 10.4356 7.75678 9.62315 7.61011 9.37315C7.36595 8.95148 7.87678 8.89148 8.34178 8.01148C8.42511 7.83648 8.38261 7.69898 8.32095 7.57482C8.25845 7.44982 7.76095 6.22482 7.55261 5.73648C7.35261 5.24982 7.14678 5.31148 6.99261 5.31148C6.51261 5.26982 6.16178 5.27648 5.85261 5.59815C4.50761 7.07648 4.84678 8.60148 5.99761 10.2231C8.25928 13.1831 9.46428 13.7281 11.6676 14.4848C12.2626 14.674 12.8051 14.6473 13.2343 14.5856C13.7126 14.5098 14.7068 13.9848 14.9143 13.3973C15.1268 12.8098 15.1268 12.3223 15.0643 12.2098C15.0026 12.0973 14.8393 12.0348 14.5893 11.9223Z"
                                            fill="white" />
                                        <path
                                            d="M17.1 2.87404C10.6925 -3.32013 0.0883333 1.17237 0.0841667 9.91071C0.0841667 11.6574 0.541667 13.3607 1.41333 14.8649L0 19.9999L5.27917 18.6232C11.8667 22.1815 19.9967 17.4565 20 9.91571C20 7.26904 18.9667 4.77821 17.0875 2.90654L17.1 2.87404ZM18.335 9.88821C18.33 16.249 11.3475 20.2215 5.825 16.9749L5.525 16.7965L2.4 17.609L3.2375 14.5715L3.03833 14.259C-0.398333 8.78821 3.55 1.63821 10.06 1.63821C12.2717 1.63821 14.3475 2.50071 15.9108 4.06321C17.4733 5.61237 18.335 7.68821 18.335 9.88821Z"
                                            fill="white" />
                                    </g>
                                    <defs>
                                        <clipPath id="clip0_card_resp">
                                            <rect width="20" height="20" fill="white" />
                                        </clipPath>
                                    </defs>
                                </svg>
                                <span>Mensaje</span>
                            </button>
                        </div>
                    }

                    <!-- Botones desktop (favoritos y compartir originales) -->
                    <div class="producto-actions">
                        <!-- Botón de favoritos -->
                        <button class="producto-favorite-btn" onclick="toggleFavorite(@Model.Vehicle?.Id)">
                            <svg width="22" height="19" viewBox="0 0 22 19" fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <path
                                    d="M19.5558 2.43875C17.6428 0.520415 14.5216 0.520415 12.596 2.43875L10.9976 4.04157L9.39927 2.43875C7.47368 0.520415 4.36505 0.520415 2.43947 2.43875C0.513888 4.35708 0.526474 7.487 2.43947 9.41794L4.03783 11.0208L10.9976 18L17.9575 11.0208L19.5558 9.41794C21.4814 7.487 21.4814 4.3697 19.5558 2.43875Z"
                                    stroke="white" stroke-width="2" stroke-miterlimit="10" stroke-linejoin="round" />
                            </svg>
                            <span>Agregar a favoritos</span>
                        </button>

                        <!-- Botón de compartir -->
                        <button class="producto-share-btn" onclick="shareProduct()">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                <path
                                    d="M18 8C19.6569 8 21 6.65685 21 5C21 3.34315 19.6569 2 18 2C16.3431 2 15 3.34315 15 5C15 6.65685 16.3431 8 18 8Z"
                                    stroke="white" stroke-width="2" />
                                <path
                                    d="M6 15C7.65685 15 9 13.6569 9 12C9 10.3431 7.65685 9 6 9C4.34315 9 3 10.3431 3 12C3 13.6569 4.34315 15 6 15Z"
                                    stroke="white" stroke-width="2" />
                                <path
                                    d="M18 22C19.6569 22 21 20.6569 21 19C21 17.3431 19.6569 16 18 16C16.3431 16 15 17.3431 15 19C15 20.6569 16.3431 22 18 22Z"
                                    stroke="white" stroke-width="2" />
                                <path d="M8.5 13.5L15.5 17.5M15.5 6.5L8.5 10.5" stroke="white" stroke-width="2" />
                            </svg>
                            <span>Compartir</span>
                        </button>

                        <button class="producto-preapproval-btn btn-primario" onclick="solicitarPreAprobacion()">
                            Solicitar pre-aprobación
                        </button>
                    </div>

                    <!-- Iconos responsive (solo visible en mobile/tablet) -->
                    <div class="producto-card-icons-responsive">
                        <button class="icon-btn-responsive favorite-icon-btn-responsive"
                            onclick="toggleFavorite(@Model.Vehicle?.Id)" title="Agregar a favoritos">
                            <svg width="20" height="18" viewBox="0 0 22 19" fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <path
                                    d="M19.5558 2.43875C17.6428 0.520415 14.5216 0.520415 12.596 2.43875L10.9976 4.04157L9.39927 2.43875C7.47368 0.520415 4.36505 0.520415 2.43947 2.43875C0.513888 4.35708 0.526474 7.487 2.43947 9.41794L4.03783 11.0208L10.9976 18L17.9575 11.0208L19.5558 9.41794C21.4814 7.487 21.4814 4.3697 19.5558 2.43875Z"
                                    stroke="white" stroke-width="2" stroke-miterlimit="10" stroke-linejoin="round" />
                            </svg>
                        </button>

                        <button class="icon-btn-responsive share-icon-btn-responsive" onclick="shareProduct()"
                            title="Compartir">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                <path
                                    d="M18 8C19.6569 8 21 6.65685 21 5C21 3.34315 19.6569 2 18 2C16.3431 2 15 3.34315 15 5C15 6.65685 16.3431 8 18 8Z"
                                    stroke="white" stroke-width="2" />
                                <path
                                    d="M6 15C7.65685 15 9 13.6569 9 12C9 10.3431 7.65685 9 6 9C4.34315 9 3 10.3431 3 12C3 13.6569 4.34315 15 6 15Z"
                                    stroke="white" stroke-width="2" />
                                <path
                                    d="M18 22C19.6569 22 21 20.6569 21 19C21 17.3431 19.6569 16 18 16C16.3431 16 15 17.3431 15 19C15 20.6569 16.3431 22 18 22Z"
                                    stroke="white" stroke-width="2" />
                                <path d="M8.5 13.5L15.5 17.5M15.5 6.5L8.5 10.5" stroke="white" stroke-width="2" />
                            </svg>
                        </button>
                    </div>

                    <!-- Botón de pre-aprobación responsive -->
                    <button class="producto-preapproval-btn-responsive btn-primario" onclick="solicitarPreAprobacion()">
                        Solicitar pre-aprobación
                    </button>
                </div>

                <!-- Sistema de Tabs (Responsive Only) -->
                <div class="producto-tabs">
                    <div class="producto-tabs-header">
                        <button class="producto-tab-button active" onclick="switchTab('descripcion')">
                            Descripción
                        </button>
                        <button class="producto-tab-button" onclick="switchTab('especificaciones')">
                            Especificaciones
                        </button>
                        <button class="producto-tab-button" onclick="switchTab('vendedor')">
                            Vendedor
                        </button>
                    </div>

                    <!-- Tab Content: Descripción -->
                    <div id="tab-descripcion" class="producto-tab-content active">
                        @if (Model.Vehicle != null)
                        {
                            <section class="producto-description">
                                <p>@Model.Vehicle.Descripcion</p>
                            </section>
                        }
                    </div>

                    <!-- Tab Content: Especificaciones -->
                    <div id="tab-especificaciones" class="producto-tab-content">
                        @if (Model.Vehicle != null)
                        {
                            <section class="producto-specifications">
                                <div class="specifications-grid">
                                    <!-- Column 1 -->
                                    <div class="spec-column">
                                        <div class="spec-item">
                                            <h3>Marca</h3>
                                            <p>@(string.IsNullOrEmpty(Model.Vehicle.Marca) ? "" :
                                                     char.ToUpper(Model.Vehicle.Marca[0]) +
                                                     Model.Vehicle.Marca.Substring(1).ToLower())</p>
                                        </div>
                                        <div class="spec-item">
                                            <h3>Modelo</h3>
                                            <p>@(string.IsNullOrEmpty(Model.Vehicle.Modelo) ? "" :
                                                     char.ToUpper(Model.Vehicle.Modelo[0]) +
                                                     Model.Vehicle.Modelo.Substring(1).ToLower())</p>
                                        </div>
                                        <div class="spec-item">
                                            <h3>Año</h3>
                                            <p>@Model.Vehicle.Ano</p>
                                        </div>
                                        <div class="spec-item">
                                            <h3>Kilometraje</h3>
                                            <p>@Model.FormatKilometrage(Model.Vehicle.Kilometraje)</p>
                                        </div>
                                        <div class="spec-item">
                                            <h3>Carrocería</h3>
                                            <p>@(string.IsNullOrEmpty(Model.Vehicle.Carroceria) ? "" :
                                                     char.ToUpper(Model.Vehicle.Carroceria[0]) +
                                                     Model.Vehicle.Carroceria.Substring(1).ToLower())</p>
                                        </div>
                                        <div class="spec-item">
                                            <h3>Número de puertas</h3>
                                            <p>@Model.Vehicle.NumeroPuertas</p>
                                        </div>
                                        <div class="spec-item">
                                            <h3>Motor</h3>
                                            <p>@Model.Vehicle.Cilindrada</p>
                                        </div>
                                        <div class="spec-item">
                                            <h3>Propulsión</h3>
                                            <p>@(string.IsNullOrEmpty(Model.Vehicle.Combustible) ? "" :
                                                     char.ToUpper(Model.Vehicle.Combustible[0]) +
                                                     Model.Vehicle.Combustible.Substring(1).ToLower())</p>
                                        </div>
                                        <div class="spec-item">
                                            <h3>Transmisión</h3>
                                            <p>@(string.IsNullOrEmpty(Model.Vehicle.Transmision) ? "" :
                                                     char.ToUpper(Model.Vehicle.Transmision[0]) +
                                                     Model.Vehicle.Transmision.Substring(1).ToLower())</p>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        }
                    </div>

                    <!-- Tab Content: Vendedor -->
                    <div id="tab-vendedor" class="producto-tab-content">
                        @if (Model.Vehicle?.Propietario != null)
                        {
                            @if (Model.Vehicle.Propietario.EsAgencia)
                            {
                                <a asp-page="/PerfilAgencia" asp-route-agenciaEmail="@Model.Vehicle.Propietario.Email" class="producto-seller-card producto-seller-card-clickable">
                                    <p class="seller-business-name">@Model.Vehicle.Propietario.NombreAMostrar</p>

                                    <div class="seller-logo-placeholder">
                                        @if (!string.IsNullOrEmpty(Model.Vehicle.Propietario.LogoUrl))
                                        {
                                            <img src="@Model.Vehicle.Propietario.LogoUrl" alt="Logo de @Model.Vehicle.Propietario.NombreAgencia" />
                                        }
                                        else
                                        {
                                            <p>LOGO<br />(SI TIENE)</p>
                                        }
                                    </div>

                                    <div class="seller-contact-info">
                                        @if (!string.IsNullOrEmpty(Model.Vehicle.Propietario.NumeroTelefono))
                                        {
                                            <div class="seller-info-row">
                                                <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
                                                    <path
                                                        d="M3 3h2l1.5 4-1.5 1.5c1 2 2.5 3.5 4.5 4.5L11 11.5l4 1.5v2c0 1.1-.9 2-2 2C6.477 17 2 12.523 2 6c0-1.1.9-2 2-2z"
                                                        stroke="white" stroke-width="1.5" />
                                                </svg>
                                                <span>@Model.Vehicle.Propietario.NumeroTelefono</span>
                                            </div>
                                        }

                                        @if (!string.IsNullOrEmpty(Model.Vehicle.UbicacionCompleta))
                                        {
                                            <div class="seller-info-row">
                                                <svg width="14" height="17" viewBox="0 0 14 17" fill="none"
                                                    xmlns="http://www.w3.org/2000/svg">
                                                    <path
                                                        d="M6.58801 16.17C9.6369 13.034 12.6858 10.2259 12.6858 6.76199C12.6858 3.29806 9.95573 0.48999 6.58801 0.48999C3.22031 0.48999 0.490234 3.29806 0.490234 6.76199C0.490234 10.2259 3.53912 13.034 6.58801 16.17Z"
                                                        stroke="white" stroke-width="0.98" stroke-linecap="round"
                                                        stroke-linejoin="round" />
                                                    <path
                                                        d="M6.80668 8.3299C7.7689 8.3299 8.5489 7.54991 8.5489 6.58768C8.5489 5.62548 7.7689 4.84546 6.80668 4.84546C5.84445 4.84546 5.06445 5.62548 5.06445 6.58768C5.06445 7.54991 5.84445 8.3299 6.80668 8.3299Z"
                                                        stroke="white" stroke-width="0.98" stroke-linecap="round"
                                                        stroke-linejoin="round" />
                                                </svg>
                                                <span>@Model.Vehicle.UbicacionCompleta</span>
                                            </div>
                                        }

                                        <div class="seller-info-row">
                                            <svg width="21" height="18" viewBox="0 0 21 18" fill="none"
