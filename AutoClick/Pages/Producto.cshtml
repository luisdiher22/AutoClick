<!-- Modal de Pre-Aprobación -->
<div id="preAprobacionModal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Solicitar Pre-Aprobación</h3>
            <button type="button" class="modal-close" onclick="closePreAprobacionModal()">&times;</button>
        </div>

        <div class="modal-info-message">
            <p>
                <strong>¡Gracias por su interés!</strong>
                Por el momento no contamos con alianzas bancarias, pero estamos trabajando para ofrecerle las mejores
                opciones de financiamiento.
                Regístrese ahora y lo contactaremos cuando tengamos una alianza disponible.
            </p>
        </div>

        <form id="preAprobacionForm" class="modal-form">
            @Html.AntiForgeryToken()
            <input type="hidden" id="autoIdInput" name="autoId" value="@(Model.Vehicle?.Id ?? 0)" />

            <div class="form-group">
                <label for="nombre">Nombre <span class="required">*</span></label>
                <input type="text" id="nombre" name="nombre" class="form-input" placeholder="Introduzca su nombre"
                    required />
            </div>

            <div class="form-group">
                <label for="apellidos">Apellidos <span class="required">*</span></label>
                <input type="text" id="apellidos" name="apellidos" class="form-input"
                    placeholder="Introduzca sus apellidos" required />
            </div>

            <div class="form-group">
                <label for="telefono">Teléfono <span class="required">*</span></label>
                <input type="tel" id="telefono" name="telefono" class="form-input" placeholder="0000-0000" maxlength="9"
                    required />
            </div>

            <div class="form-group">
                <label for="email">Correo electrónico <span class="required">*</span></label>
                <input type="email" id="email" name="email" class="form-input" placeholder="ejemplo@correo.com"
                    required />
            </div>

            <div class="modal-actions">
                <button type="submit" class="btn-primary" id="submitPreAprobacion">Enviar Solicitud</button>
                <button type="button" class="btn-secondary" onclick="closePreAprobacionModal()">Cancelar</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal de Confirmación -->
<div id="confirmationModal" class="confirmation-modal">
    <div class="confirmation-content">
        <div class="confirmation-icon" id="confirmationIcon">
            <span id="confirmationIconText">✓</span>
        </div>
        <h3 class="confirmation-title" id="confirmationTitle">¡Éxito!</h3>
        <p class="confirmation-message" id="confirmationMessage">Su solicitud ha sido enviada correctamente.</p>
        <button class="confirmation-button" onclick="closeConfirmationModal()">Aceptar</button>
    </div>
</div>

