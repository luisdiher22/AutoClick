</div>

@section Scripts {
    <script>
        // Province/Canton cascade
        function updateCantones(provinciaSelect) {
            const cantonSelect = document.querySelector('#canton');
            const provincia = provinciaSelect.value;

            // Clear current options
            cantonSelect.innerHTML = '<option value="">Seleccione un cant√≥n</option>';

            // Add cantones based on province
            const cantonesPorProvincia = {
                'San Jos√©': ['Central', 'Escaz√∫', 'Desamparados', 'Puriscal', 'Tarraz√∫', 'Aserr√≠', 'Mora', 'Goicoechea', 'Santa Ana', 'Alajuelita', 'Coronado', 'Acosta', 'Tib√°s', 'Moravia', 'Montes de Oca', 'Turrubares', 'Dota', 'Curridabat', 'P√©rez Zeled√≥n', 'Le√≥n Cort√©s'],
                'Alajuela': ['Central', 'San Ram√≥n', 'Grecia', 'San Mateo', 'Atenas', 'Naranjo', 'Palmares', 'Po√°s', 'Orotina', 'San Carlos', 'Zarcero', 'Sarch√≠', 'Upala', 'Los Chiles', 'Guatuso'],
                'Cartago': ['Central', 'Para√≠so', 'La Uni√≥n', 'Jim√©nez', 'Turrialba', 'Alvarado', 'Oreamuno', 'El Guarco'],
                'Heredia': ['Central', 'Barva', 'Santo Domingo', 'Santa B√°rbara', 'San Rafael', 'San Isidro', 'Bel√©n', 'Flores', 'San Pablo', 'Sarapiqu√≠'],
                'Guanacaste': ['Liberia', 'Nicoya', 'Santa Cruz', 'Bagaces', 'Carrillo', 'Ca√±as', 'Abangares', 'Tilar√°n', 'Nandayure', 'La Cruz', 'Hojancha'],
                'Puntarenas': ['Central', 'Esparza', 'Buenos Aires', 'Montes de Oro', 'Osa', 'Quepos', 'Golfito', 'Coto Brus', 'Parrita', 'Corredores', 'Garabito'],
                'Lim√≥n': ['Central', 'Pococ√≠', 'Siquirres', 'Talamanca', 'Matina', 'Gu√°cimo']
            };

            if (cantonesPorProvincia[provincia]) {
                cantonesPorProvincia[provincia].forEach(canton => {
                    const option = document.createElement('option');
                    option.value = canton;
                    option.textContent = canton;
                    cantonSelect.appendChild(option);
                });
            }
        }

        // Preview image function
        function previewImage(input, previewId) {
            const previewDiv = document.getElementById(previewId);
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    previewDiv.innerHTML = '<img src="' + e.target.result + '" alt="Preview" />';
                    previewDiv.style.display = 'block';
                }
                
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Form validation
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.register-form');
            const emailInput = document.querySelector('input[name="Email"]');
            const confirmEmailInput = document.querySelector('input[name="ConfirmarEmail"]');
            const passwordInput = document.querySelector('input[name="Contrasena"]');
            const confirmPasswordInput = document.querySelector('input[name="ConfirmarContrasena"]');

            // Email confirmation validation
            confirmEmailInput.addEventListener('blur', function() {
                if (this.value && emailInput.value && this.value !== emailInput.value) {
                    this.setCustomValidity('Los correos electr√≥nicos no coinciden');
                } else {
                    this.setCustomValidity('');
                }
            });

            emailInput.addEventListener('input', function() {
                if (confirmEmailInput.value) {
                    confirmEmailInput.dispatchEvent(new Event('blur'));
                }
            });

            // Password confirmation validation
            confirmPasswordInput.addEventListener('blur', function() {
                if (this.value && passwordInput.value && this.value !== passwordInput.value) {
                    this.setCustomValidity('Las contrase√±as no coinciden');
                } else {
                    this.setCustomValidity('');
                }
            });

            passwordInput.addEventListener('input', function() {
                if (confirmPasswordInput.value) {
                    confirmPasswordInput.dispatchEvent(new Event('blur'));
                }
            });
        });
    </script>
}
