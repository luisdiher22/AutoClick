@page
@model AutoClick.Pages.RegistroAgenciaUbicacionModel
@{
    ViewData["Title"] = "Registro Agencia - Ubicación - AutoClick.cr";
}

<div style="padding: 80px 40px; text-align: center; background: #02081C; color: white; min-height: 100vh;">
    <h1>Paso 2: Ubicación del Negocio</h1>
    <p style="font-size: 20px; margin: 40px 0;">Esta sección estará disponible próximamente.</p>
    
    @if (!string.IsNullOrEmpty(ViewBag.NombreAgencia))
    {
        <p style="font-size: 18px; color: #00CC00;">¡Bienvenido, @ViewBag.NombreAgencia!</p>
        <p>Su registro inicial fue exitoso.</p>
    }
    
    <div style="margin-top: 60px;">
        <a href="/" style="color: white; text-decoration: none; padding: 12px 24px; border: 1px solid white; border-radius: 4px;">Volver al Inicio</a>
    </div>
</div>

