@page
@model RegistroIndividuoModel
@{
    ViewData["Title"] = "Registro Individual - AutoClick.cr";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: #02081C !important;
            margin: 0;
            font-family: 'Montserrat', sans-serif;
            min-height: 100vh;
        }
        
        html {
            background: #02081C !important;
        }
        
        .main-container {
            background: transparent !important;
            padding: 0 !important;
            margin: 0 !important;
        }

        .register-container {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: #02081C !important;
        }

        .register-header {
            padding: 20px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .register-header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-logo img {
            height: 40px;
        }

        .back-home-btn {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #FFFFFF;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .back-home-btn:hover {
            color: #E5E7EB;
            text-decoration: none;
        }

        .back-arrow {
            width: 20px;
            height: 20px;
            border-left: 2px solid currentColor;
            border-bottom: 2px solid currentColor;
            transform: rotate(45deg);
        }

        .register-main {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .register-form-container {
            background: rgba(3.25, 13, 43.35, 0.95);
            border-radius: 8px;
            border: 0.50px solid rgba(255, 255, 255, 0.50);
            backdrop-filter: blur(6px);
            width: 100%;
            max-width: 600px;
            padding: 32px;
            color: white;
        }

        .form-header {
            text-align: center;
            margin-bottom: 32px;
        }

        .form-title {
            font-size: 24px;
            font-weight: 700;
            color: white;
            margin-bottom: 8px;
            font-family: 'Montserrat', sans-serif;
        }

        .form-subtitle {
            font-size: 20px;
            color: rgba(255, 255, 255, 0.75);
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
        }

        .form-section {
            margin-bottom: 24px;
        }

        .section-title {
            font-size: 18px;
            font-weight: 600;
            color: #1F2937;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-row {
            display: flex;
            gap: 16px;
            margin-bottom: 16px;
        }

        .form-group {
            flex: 1;
        }

        .form-group.full-width {
            flex: none;
            width: 100%;
        }

        .form-label {
            display: block;
            font-weight: 500;
            color: white;
            margin-bottom: 6px;
            font-size: 14px;
            font-family: 'Montserrat', sans-serif;
        }

        .required {
            color: #EF4444;
        }

        .form-input {
            width: 100%;
            padding: 8px 16px;
            background: #02081C;
            border: 0.50px solid rgba(255, 255, 255, 0.50);
            border-radius: 4px;
            font-size: 14px;
            transition: all 0.2s ease;
            box-sizing: border-box;
            color: white;
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
        }

        .form-input:focus {
            outline: none;
            border-color: rgba(255, 255, 255, 0.8);
            box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.2);
        }

        .form-input::placeholder {
            color: rgba(255, 255, 255, 0.50);
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
        }

        .form-notes {
            margin-top: 24px;
            padding: 0;
            background: transparent;
        }

        .form-notes p {
            margin: 0;
            font-size: 14px;
            color: white;
            line-height: 1.5;
            font-family: 'Montserrat', sans-serif;
            font-weight: 300;
        }

        .form-notes p:not(:last-child) {
            margin-bottom: 8px;
        }

        .register-button {
            width: 100%;
            background: white;
            color: #06174D;
            border: none;
            padding: 16px;
            border-radius: 4px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 24px;
            font-family: 'Montserrat', sans-serif;
        }

        .register-button:hover {
            transform: translateY(-1px);
            box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3);
        }

        .register-button:disabled {
            background: #9CA3AF;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .error-message {
            background: #FEF2F2;
            border: 1px solid #FECACA;
            color: #DC2626;
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 16px;
            font-size: 14px;
        }

        .success-message {
            background: #F0FDF4;
            border: 1px solid #BBF7D0;
            color: #166534;
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 16px;
            font-size: 14px;
        }

        @@media (max-width: 768px) {
            .form-row {
                flex-direction: column;
            }
            
            .register-form-container {
                padding: 24px;
                margin: 0 16px;
            }
        }
    </style>
}

<div class="register-container">
    <!-- Header -->
    <header class="register-header">
        <div class="register-header-content">
            <!-- Logo -->
            <div class="header-logo">
                <a asp-page="/Index">
                    <img src="~/images/logo.png" alt="AutoClick.cr" />
                </a>
            </div>
            
            <!-- Back to Home -->
            <div class="header-nav">
                <a asp-page="/Index" class="back-home-btn">
                    <div class="back-arrow"></div>
                    Volver al inicio
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="register-main">
        <div class="register-form-container">
            <div class="form-header">
                <h1 class="form-title">Anuncia tu auto</h1>
                <p class="form-subtitle">Datos personales</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">@Model.ErrorMessage</div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="success-message">@Model.SuccessMessage</div>
            }

            <form method="post" class="register-form">
                <!-- Datos Personales -->
                <div class="form-section">
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                Nombre <span class="required">*</span>
                            </label>
                            <input type="text" 
                                   class="form-input" 
                                   placeholder="Introducir nombre"
                                   asp-for="Nombre" 
                                   required />
                        </div>
                        <div class="form-group">
                            <label class="form-label">
                                Apellido <span class="required">*</span>
                            </label>
                            <input type="text" 
                                   class="form-input" 
                                   placeholder="Introducir apellido"
                                   asp-for="Apellidos" 
                                   required />
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label class="form-label">
                            Correo electrónico <span class="required">*</span>
                        </label>
                        <input type="email" 
                               class="form-input" 
                               placeholder="Introducir correo"
                               asp-for="Email" 
                               required />
                    </div>

                    <div class="form-group full-width">
                        <label class="form-label">
                            Confirmar correo electrónico <span class="required">*</span>
                        </label>
                        <input type="email" 
                               class="form-input" 
                               placeholder="Vuelva a introducir correo"
                               asp-for="ConfirmarEmail" 
                               required />
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                Teléfono 1 <span class="required">*</span>
                            </label>
                            <input type="tel" 
                                   class="form-input" 
                                   placeholder="Introducir número"
                                   asp-for="Telefono1" 
                                   required />
                        </div>
                        <div class="form-group">
                            <label class="form-label">WhatsApp</label>
                            <input type="tel" 
                                   class="form-input" 
                                   placeholder="Introducir número"
                                   asp-for="WhatsApp" />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                Contraseña <span class="required">*</span>
                            </label>
                            <input type="password" 
                                   class="form-input" 
                                   placeholder="Introducir contraseña"
                                   asp-for="Contrasena" 
                                   required />
                        </div>
                        <div class="form-group">
                            <label class="form-label">
                                Confirmar contraseña <span class="required">*</span>
                            </label>
                            <input type="password" 
                                   class="form-input" 
                                   placeholder="Introducir contraseña"
                                   asp-for="ConfirmarContrasena" 
                                   required />
                        </div>
                    </div>
                </div>

                <!-- Notas informativas -->
                <div class="form-notes">
                    <p>*Ni la contraseña ni el correo se compartirán con nadie.</p>
                    <p>*Este correo y contraseña serán los que utilizará para ingresar a su cuenta.</p>
                </div>

                <button type="submit" class="register-button">
                    Crear cuenta
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.register-form');
            const emailInput = document.querySelector('input[name="Email"]');
            const confirmEmailInput = document.querySelector('input[name="ConfirmarEmail"]');
            const passwordInput = document.querySelector('input[name="Contrasena"]');
            const confirmPasswordInput = document.querySelector('input[name="ConfirmarContrasena"]');

            // Email confirmation validation
            confirmEmailInput.addEventListener('blur', function() {
                if (this.value && emailInput.value && this.value !== emailInput.value) {
                    this.setCustomValidity('Los correos electrónicos no coinciden');
                } else {
                    this.setCustomValidity('');
                }
            });

            emailInput.addEventListener('input', function() {
                if (confirmEmailInput.value) {
                    confirmEmailInput.dispatchEvent(new Event('blur'));
                }
            });

            // Password confirmation validation
            confirmPasswordInput.addEventListener('blur', function() {
                if (this.value && passwordInput.value && this.value !== passwordInput.value) {
                    this.setCustomValidity('Las contraseñas no coinciden');
                } else {
                    this.setCustomValidity('');
                }
            });

            passwordInput.addEventListener('input', function() {
                if (confirmPasswordInput.value) {
                    confirmPasswordInput.dispatchEvent(new Event('blur'));
                }
            });
        });
    </script>
}