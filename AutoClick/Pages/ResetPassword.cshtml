@page
@model AutoClick.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Restablecer contrase√±a - AutoClick.cr";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            background: #02081C;
        }
        
        .reset-password-container {
            min-height: calc(100vh - 80px - 300px);
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px 20px;
        }
        
        .reset-password-card {
            background: #030D2B;
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            padding: 48px 40px;
            max-width: 500px;
            width: 100%;
            color: white;
            font-family: 'Montserrat', sans-serif;
        }
        
        .reset-password-header {
            text-align: center;
            margin-bottom: 32px;
        }
        
        .reset-password-logo {
            color: #FF931E;
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 12px;
        }
        
        .reset-password-title {
            font-size: 24px;
            font-weight: 700;
            color: white;
            margin-bottom: 8px;
        }
        
        .reset-password-subtitle {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.7);
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            display: block;
            color: white;
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 8px;
        }
        
        .form-input {
            width: 100%;
            height: 48px;
            padding: 12px 16px;
            background: #02081C;
            border-radius: 6px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            color: white;
            font-size: 14px;
            font-family: 'Montserrat', sans-serif;
            transition: all 0.3s ease;
        }
        
        .form-input:focus {
            outline: none;
            border-color: #FF931E;
            box-shadow: 0 0 0 3px rgba(255, 147, 30, 0.1);
        }
        
        .validation-message {
            color: #EF4444;
            font-size: 12px;
            margin-top: 6px;
            display: block;
        }
        
        .btn-reset {
            width: 100%;
            height: 52px;
            background: linear-gradient(135deg, #FF931E, #FF7A00);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 24px;
        }
        
        .btn-reset:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 147, 30, 0.3);
        }
        
        .btn-reset:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .password-requirements {
            background: rgba(255, 193, 7, 0.1);
            border-left: 4px solid #FFC107;
            padding: 14px;
            margin-top: 20px;
            border-radius: 4px;
            font-size: 13px;
        }
        
        .password-requirements ul {
            margin: 8px 0 0 0;
            padding-left: 20px;
            color: rgba(255, 255, 255, 0.8);
        }
        
        .password-requirements li {
            margin-bottom: 4px;
        }
        
        .alert {
            padding: 14px 18px;
            border-radius: 6px;
            margin-bottom: 24px;
            font-size: 14px;
        }
        
        .alert-error {
            background: rgba(239, 68, 68, 0.15);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #EF4444;
        }
        
        .alert-success {
            background: rgba(34, 197, 94, 0.15);
            border: 1px solid rgba(34, 197, 94, 0.3);
            color: #22C55E;
        }
        
        .back-to-login {
            text-align: center;
            margin-top: 24px;
        }
        
        .back-to-login a {
            color: #FF931E;
            text-decoration: none;
            font-size: 14px;
            transition: color 0.3s ease;
        }
        
        .back-to-login a:hover {
            color: #FF7A00;
            text-decoration: underline;
        }
        
        @@media (max-width: 768px) {
            .reset-password-card {
                padding: 32px 24px;
            }
            
            .reset-password-title {
                font-size: 20px;
            }
        }
    </style>
}

<div class="reset-password-container">
    <div class="reset-password-card">
        <div class="reset-password-header">
            <div class="reset-password-logo">AutoClick.cr</div>
            <h1 class="reset-password-title">Restablecer contrase√±a</h1>
            <p class="reset-password-subtitle">Ingresa tu nueva contrase√±a</p>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-error">
                <strong>‚ö†Ô∏è Error:</strong> @Model.ErrorMessage
            </div>
        }
        
        @if (Model.TokenIsValid)
        {
            <form method="post" id="resetPasswordForm">
                <input type="hidden" asp-for="Token" />
                
                <div class="form-group">
                    <label for="NewPassword">Nueva contrase√±a</label>
                    <input asp-for="NewPassword" type="password" class="form-input" required autocomplete="new-password" />
                    <span asp-validation-for="NewPassword" class="validation-message"></span>
                </div>
                
                <div class="form-group">
                    <label for="ConfirmPassword">Confirmar nueva contrase√±a</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-input" required autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                </div>
                
                <div class="password-requirements">
                    <strong>üìã Requisitos de contrase√±a:</strong>
                    <ul>
                        <li>M√≠nimo 8 caracteres</li>
                        <li>Al menos una letra may√∫scula</li>
                        <li>Al menos una letra min√∫scula</li>
                        <li>Al menos un n√∫mero</li>
                    </ul>
                </div>
                
                <button type="submit" class="btn-reset">Restablecer contrase√±a</button>
            </form>
        }
        else if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success">
                <strong>‚úÖ ¬°√âxito!</strong> @Model.SuccessMessage
            </div>
        }
        
        <div class="back-to-login">
            <a href="/ConfiguracionCuenta">‚Üê Volver a configuraci√≥n de cuenta</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById('resetPasswordForm')?.addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Procesando...';
        });
        
        // Show success message if password was reset
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <text>
            Swal.fire({
                icon: 'success',
                title: '¬°Contrase√±a restablecida!',
                text: '@Model.SuccessMessage',
                confirmButtonColor: '#FF931E',
                confirmButtonText: 'Ir a inicio de sesi√≥n'
            }).then(() => {
                window.location.href = '/ConfiguracionCuenta';
            });
            </text>
        }
    </script>
}
