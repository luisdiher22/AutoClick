@model AutoClick.Models.AnuncioPublicidad

<div class="anuncio-container anuncio-horizontal">
@if (Model != null)
{
    <a href="@(string.IsNullOrEmpty(Model.UrlDestino) ? "#" : Model.UrlDestino)" 
       target="_blank" 
       class="anuncio-link"
       onclick="registrarClic(@Model.Id)">
        <img src="@Model.UrlImagen" 
             alt="@Model.EmpresaPublicidad?.NombreEmpresa" 
             class="anuncio-imagen" />
    </a>
}
else
{
    <div class="anuncio-placeholder" onclick="abrirModalSolicitudAnuncio()" style="cursor: pointer;">
        <img src="/images/logos/logo-autoclick-white.png" alt="AutoClick" class="placeholder-logo" style="max-width: 143px; margin-bottom: 16px;" />
        <h3 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 8px; color: #ffffff;">SU ANUNCIO AQUÍ</h3>
        <p style="color: rgba(255,255,255,0.9); margin: 0;">¡Haga click en este recuadro para empezar!</p>
    </div>
}
</div>

<script>
function registrarClic(anuncioId) {
    fetch(`/api/publicidad/registrar-clic/${anuncioId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    });
}
</script>

<style>
.anuncio-container {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    margin: 20px 0;
}

.anuncio-horizontal {
    width: 100%;
    max-width: 1010px;
    height: 189px;
    margin-left: auto;
    margin-right: auto;
    background: #04091F;
}

.anuncio-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: #04091F;
    transition: background 0.3s ease;
}

.anuncio-placeholder:hover {
    background: #0a1228;
}

.anuncio-link {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
}

.anuncio-imagen {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.anuncio-link:hover .anuncio-imagen {
    transform: scale(1.02);
}

.anuncio-badge {
    position: absolute;
    top: 8px;
    right: 8px;
    background: rgba(0,0,0,0.7);
    color: white;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}
</style>
