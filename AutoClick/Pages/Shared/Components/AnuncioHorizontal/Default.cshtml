@model AutoClick.Models.AnuncioPublicidad

<div class="anuncio-container anuncio-horizontal">
@if (Model != null)
{
    <a href="@(string.IsNullOrEmpty(Model.UrlDestino) ? "#" : Model.UrlDestino)" 
       target="_blank" 
       class="anuncio-link"
       onclick="registrarClic(@Model.Id)">
        <img src="@Model.UrlImagen" 
             alt="@Model.EmpresaPublicidad?.NombreEmpresa" 
             class="anuncio-imagen" />
    </a>
}
else
{
    <div class="anuncio-placeholder" onclick="abrirModalSolicitudAnuncio()" style="cursor: pointer;">
        <picture>
            <source media="(max-width: 768px)" 
                    srcset="https://autoclickstorage.blob.core.windows.net/anuncios/PlaceholderHorizontal_movil.png">
            <source media="(max-width: 1024px)" 
                    srcset="https://autoclickstorage.blob.core.windows.net/anuncios/PlaceholderHorizontal_tablet.png">
            <img src="https://autoclickstorage.blob.core.windows.net/anuncios/PlaceholderHorizontal_escritorio.png" 
                 alt="Su anuncio aquÃ­" class="placeholder-image" />
        </picture>
    </div>
}
</div>

<script>
function registrarClic(anuncioId) {
    fetch(`/api/publicidad/registrar-clic/${anuncioId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    });
}
</script>

<style>
.anuncio-container {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    margin: 20px 0;
    contain: layout;
}

.anuncio-horizontal {
    width: 100%;
    max-width: 1010px;
    aspect-ratio: 1010 / 189;
    margin-left: auto;
    margin-right: auto;
    background: #04091F;
}

.anuncio-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    transition: opacity 0.3s ease;
}

.anuncio-placeholder:hover {
    opacity: 0.9;
}

.placeholder-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
}

.anuncio-link {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
}

.anuncio-imagen {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
}

.anuncio-link:hover .anuncio-imagen {
    transform: scale(1.02);
}

.anuncio-badge {
    position: absolute;
    top: 8px;
    right: 8px;
    background: rgba(0,0,0,0.7);
    color: white;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

@@media (max-width: 1024px) {
    .anuncio-horizontal {
        /* Mantener proporciones originales en todas las pantallas */
    }
}

@@media (max-width: 768px) {
    .anuncio-horizontal {
        /* Mantener proporciones originales */
        max-width: 100%;
    }

    .anuncio-imagen,
    .placeholder-image {
        object-fit: contain;
    }
}

@@media (max-width: 480px) {
    .anuncio-horizontal {
        /* Proporciones preservadas */
    }
}
</style>
