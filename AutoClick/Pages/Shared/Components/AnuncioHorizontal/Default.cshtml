@model AutoClick.Models.AnuncioPublicidad

@if (Model != null)
{
    <div class="anuncio-container anuncio-horizontal">
        <a href="@(string.IsNullOrEmpty(Model.UrlDestino) ? "#" : Model.UrlDestino)" 
           target="_blank" 
           class="anuncio-link"
           onclick="registrarClic(@Model.Id)">
            <img src="@Model.UrlImagen" 
                 alt="@Model.EmpresaPublicidad?.NombreEmpresa" 
                 class="anuncio-imagen" />
            <span class="anuncio-badge">Publicidad</span>
        </a>
    </div>
}

<script>
function registrarClic(anuncioId) {
    fetch(`/api/publicidad/registrar-clic/${anuncioId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    });
}
</script>

<style>
.anuncio-container {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    margin: 20px 0;
}

.anuncio-horizontal {
    width: 100%;
    max-width: 1010px;
    height: 189px;
    margin-left: auto;
    margin-right: auto;
}

.anuncio-link {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
}

.anuncio-imagen {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.anuncio-link:hover .anuncio-imagen {
    transform: scale(1.02);
}

.anuncio-badge {
    position: absolute;
    top: 8px;
    right: 8px;
    background: rgba(0,0,0,0.7);
    color: white;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}
</style>
