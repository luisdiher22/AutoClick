@model AutoClick.Models.AnuncioPublicidad

<div class="anuncio-container anuncio-medio-vertical">
@if (Model != null)
{
    <a href="@(string.IsNullOrEmpty(Model.UrlDestino) ? "#" : Model.UrlDestino)" 
       target="_blank" 
       class="anuncio-link"
       onclick="registrarClic(@Model.Id)">
        <img src="@Model.UrlImagen" 
             alt="@Model.EmpresaPublicidad?.NombreEmpresa" 
             class="anuncio-imagen" />
    </a>
}
else
{
    <div class="anuncio-placeholder" onclick="abrirModalSolicitudAnuncio()" style="cursor: pointer;">
        <picture>
            <source media="(max-width: 768px)" 
                    srcset="https://autoclickstorage.blob.core.windows.net/anuncios/PlaceholderCuadrado_movil.png">
            <source media="(max-width: 1024px)" 
                    srcset="https://autoclickstorage.blob.core.windows.net/anuncios/PlaceholderCuadrado_tablet.png">
            <img src="https://autoclickstorage.blob.core.windows.net/anuncios/PlaceholderCuadrado_escritorio.png" 
                 alt="Su anuncio aquÃ­" class="placeholder-image" />
        </picture>
    </div>
}
</div>

<script>
function registrarClic(anuncioId) {
    fetch(`/api/publicidad/registrar-clic/${anuncioId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    });
}
</script>

<style>
.anuncio-medio-vertical {
    width: 100%;
    max-width: 401px;
    aspect-ratio: 401 / 287;
    background: #04091F;
}

.anuncio-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    transition: opacity 0.3s ease;
}

.anuncio-placeholder:hover {
    opacity: 0.9;
}

.placeholder-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
}

@@media (max-width: 1024px) {
    .anuncio-medio-vertical {
        /* Proporciones preservadas */
        max-width: 100%;
    }
}

@@media (max-width: 768px) {
    .anuncio-medio-vertical {
        /* Mantener proporciones originales */
        max-width: 100%;
    }

    .anuncio-imagen,
    .placeholder-image {
        object-fit: contain;
    }
}

@@media (max-width: 480px) {
    .anuncio-medio-vertical {
        /* Proporciones preservadas */
    }
}
</style>
