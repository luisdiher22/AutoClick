    <link href="~/css/modal-solicitud-anuncio.css" rel="stylesheet" asp-append-version="true" />
    
    <!-- Minimal styles for Index page -->
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html, body {
            width: 100%;
            height: 100%;
            font-family: 'Montserrat', sans-serif;
            background-color: #02081C;
            color: white;
            overflow-x: hidden;
        }
        
        body {
            padding-top: 80px; /* Space for fixed header */
        }
        
        a {
            color: inherit;
            text-decoration: none;
        }
        
        a:hover {
            text-decoration: none;
            color: inherit;
        }
        
        .main-container {
            position: relative;
            width: 100%;
            min-height: calc(100vh - 80px);
        }
        
        /* Universal Header Styles */
        .universal-header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            background: linear-gradient(135deg, #02081C, #030D2B);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            height: 80px;
        }
        
        .header-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 15px; /* Minimal padding */
            width: 100%; /* Full width instead of max-width */
            height: 100%; /* Ensure full height usage */
        }
        
        .logo-section {
            flex-shrink: 0;
            margin-left: -5px; /* Pull logo even closer to the edge */
        }
        
        .logo-link {
            display: block;
            text-decoration: none;
        }
        
        .logo-image {
            height: 45px;
            width: auto;
        }
        
        .navigation-section {
            display: flex;
            align-items: center;
            gap: 30px;
            flex: 1;
            justify-content: center;
        }
        
        .explorar-btn {
            background: linear-gradient(135deg, #FF6B35, #F7931E);
            color: white;
            padding: 12px 24px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(255, 107, 53, 0.3);
        }
        
        .explorar-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 107, 53, 0.4);
            text-decoration: none;
            color: white;
        }
        
        .nav-dropdown {
            position: relative;
        }
        
        .nav-item {
            background: none;
            border: none;
            color: #ffffff;
            padding: 12px 16px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            border-radius: 6px;
            transition: all 0.2s ease;
        }
        
        .nav-item:hover {
            background: rgba(255, 255, 255, 0.1);
        }
        
        .dropdown-content {
            position: absolute;
            top: 100%;
            left: 0;
            background: white;
            border-radius: 8px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            min-width: 200px;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.2s ease;
            z-index: 1001;
            margin-top: 8px;
        }
        
        .nav-dropdown:hover .dropdown-content,
        .nav-dropdown.active .dropdown-content {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }
        
        .dropdown-link {
            display: block;
            padding: 12px 16px;
            color: #374151;
            text-decoration: none;
            font-size: 14px;
            transition: background-color 0.2s ease;
        }
        
        .dropdown-link:hover {
            background: #F3F4F6;
            color: #374151;
            text-decoration: none;
        }
        
        .actions-section {
            display: flex;
            align-items: center;
            gap: 20px;
            flex-shrink: 0;
        }
        
        .auth-section .login-register-btn {
            background: transparent;
            border: 2px solid #FF6B35;
            color: #FF6B35;
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s ease;
        }
        
        .auth-section .login-register-btn:hover {
            background: #FF6B35;
            color: white;
            text-decoration: none;
        }
        
        .user-section {
            position: relative;
        }
        
        .user-name {
            background: none;
            border: none;
            color: white;
            padding: 10px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            transition: background-color 0.2s ease;
        }
        
        .user-name:hover {
            background: rgba(255, 255, 255, 0.1);
        }
        
        .user-dropdown {
            position: absolute;
            top: 100%;
            right: 0;
            background: white;
            border-radius: 8px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            min-width: 200px;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.2s ease;
            z-index: 1001;
            margin-top: 8px;
        }
        
        .user-dropdown.show {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }
        
        .user-menu-item {
            display: block;
            padding: 12px 16px;
            color: #374151;
            text-decoration: none;
            font-size: 14px;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }
        
        .user-menu-item:hover {
            background: #F3F4F6;
            color: #374151;
            text-decoration: none;
        }
        
        .menu-divider {
            margin: 8px 0;
            border: none;
            border-top: 1px solid #E5E7EB;
        }
        
        .logout {
            color: #DC2626;
        }
        
        .logout:hover {
            background: #FEF2F2;
            color: #DC2626;
        }
    </style>
    
    @await RenderSectionAsync("Styles", required: false)
    
    <!-- Meta Tags -->
    <meta name="description" content="AutoClick.cr - Plataforma líder en Costa Rica para comprar y vender autos usados y nuevos. Encuentra tu auto ideal o anuncia el tuyo sin costo.">
    <meta name="keywords" content="autos, carros, Costa Rica, comprar auto, vender auto, autos usados">
</head>
<body data-user-email="@(User.Identity?.IsAuthenticated == true ? User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? User.FindFirst("Email")?.Value : "")">
    <!-- Universal Header -->
    @await Html.PartialAsync("_Header")
    
    <div class="main-container">
        @RenderBody()
    </div>

    <!-- Modal de Solicitud de Anuncio Publicitario (IGUAL QUE _Layout.cshtml) -->
    <div id="modalSolicitudAnuncio" class="modal-solicitud-anuncio" style="display: none;">
        <div class="modal-content-anuncio">
            <button type="button" class="close-modal-anuncio" onclick="cerrarModalSolicitudAnuncio()">&times;</button>
            <div class="modal-body-anuncio">
                <h3 class="modal-main-title">¡Queremos saber acerca de su empresa!</h3>
                <div class="modal-divider"></div>
                <form id="formSolicitudAnuncio" onsubmit="enviarSolicitudAnuncio(event)">
                    <h4 class="modal-section-title">Datos de contacto</h4>
                    
                    <div class="form-group-modal">
                        <label for="nombreEmpresaAnuncio">Nombre de la empresa <span class="required">*</span></label>
                        <input type="text" id="nombreEmpresaAnuncio" name="nombreEmpresa" required maxlength="100" placeholder="Introducir nombre">
                    </div>
                    <div class="form-group-modal">
                        <label for="representanteLegalAnuncio">Representante legal (o solicitante) <span class="required">*</span></label>
                        <input type="text" id="representanteLegalAnuncio" name="representanteLegal" required maxlength="100" placeholder="Nombre de representante o solicitante">
                    </div>
                    <div class="form-group-modal">
                        <label for="industriaAnuncio">Industria <span class="required">*</span></label>
                        <select id="industriaAnuncio" name="industria" required>
                            <option value="">Selecciona la industria</option>
                            <option value="Automotriz">Automotriz</option>
                            <option value="Seguros">Seguros</option>
                            <option value="Financiero">Financiero</option>
                            <option value="Detailing">Detailing y Mantenimiento</option>
                            <option value="Repuestos">Repuestos y Accesorios</option>
                            <option value="Concesionarios">Concesionarios</option>
                            <option value="Talleres">Talleres Mecánicos</option>
                            <option value="Otros">Otros</option>
                        </select>
                    </div>
                    <div class="form-group-modal">
                        <label for="correoElectronicoAnuncio">Correo electrónico <span class="required">*</span></label>
                        <input type="email" id="correoElectronicoAnuncio" name="correoElectronico" required maxlength="150" placeholder="Introduce correo electrónico">
                    </div>
                    <div class="form-group-modal">
                        <label for="telefonoAnuncio">Teléfono <span class="required">*</span></label>
                        <input type="tel" id="telefonoAnuncio" name="telefono" required placeholder="Introduce número de teléfono">
                    </div>
                    <div class="form-group-modal">
                        <label for="descripcionEmpresaAnuncio">Cuéntenos sobre su empresa <span class="required">*</span></label>
                        <textarea id="descripcionEmpresaAnuncio" name="descripcionEmpresa" required rows="3" minlength="10" maxlength="1000" placeholder="Introducir texto"></textarea>
                    </div>
                    <div id="mensajeResultadoAnuncio" class="mensaje-resultado-modal" style="display: none;"></div>
                    <button type="submit" class="btn-enviar-modal" id="btnEnviarAnuncio">Enviar</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function abrirModalSolicitudAnuncio() {
            document.getElementById('modalSolicitudAnuncio').style.display = 'flex';
            document.body.style.overflow = 'hidden';
            
            const form = document.getElementById('formSolicitudAnuncio');
            const inputs = form.querySelectorAll('input, select, textarea');
            
            inputs.forEach(input => {
                if (!input.dataset.initialized) {
                    input.addEventListener('input', function() {
                        limpiarErrorCampo(this);
                        validarCampoModal(this);
                    });
                    
                    input.addEventListener('blur', function() {
                        validarCampoModal(this);
                    });
                    
                    input.dataset.initialized = 'true';
                }
            });
            
            const telefonoInput = document.getElementById('telefonoAnuncio');
            if (telefonoInput && !telefonoInput.dataset.formatInitialized) {
                telefonoInput.addEventListener('input', formatearTelefono);
                telefonoInput.dataset.formatInitialized = 'true';
            }
        }

        function cerrarModalSolicitudAnuncio() {
            document.getElementById('modalSolicitudAnuncio').style.display = 'none';
            document.body.style.overflow = 'auto';
            const form = document.getElementById('formSolicitudAnuncio');
            form.reset();
            
            const inputs = form.querySelectorAll('input, select, textarea');
            inputs.forEach(input => limpiarErrorCampo(input));
            
            document.getElementById('mensajeResultadoAnuncio').style.display = 'none';
        }

        function formatearTelefono(e) {
            let value = e.target.value.replace(/\D/g, '');
            
            if (value.length > 8) {
                value = value.substring(0, 8);
            }
            
            if (value.length > 4) {
                value = value.substring(0, 4) + '-' + value.substring(4);
            }
            
            e.target.value = value;
        }

        function validarCampoModal(campo) {
            const valor = campo.value.trim();
            const nombre = campo.name;
            let esValido = true;
            
            limpiarErrorCampo(campo);
            
            switch(nombre) {
                case 'nombreEmpresa':
                    if (!valor || valor.length < 2 || valor.length > 100) esValido = false;
                    break;
                case 'representanteLegal':
                    if (!valor || valor.length < 2 || valor.length > 100) esValido = false;
                    break;
                case 'industria':
                    if (!valor || valor === '') esValido = false;
                    break;
                case 'correoElectronico':
                    const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                    if (!valor || !emailRegex.test(valor) || valor.length > 150) esValido = false;
                    break;
                case 'telefono':
                    const telefonoLimpio = valor.replace(/\D/g, '');
                    if (!valor || telefonoLimpio.length !== 8) esValido = false;
                    break;
                case 'descripcionEmpresa':
                    if (!valor || valor.length < 10 || valor.length > 1000) esValido = false;
                    break;
            }
            
            if (valor) {
                campo.style.borderColor = esValido ? 'rgba(0, 255, 0, 0.5)' : '#ff0000';
            }
            
            return esValido;
        }

        function limpiarErrorCampo(campo) {
            campo.style.borderColor = 'rgba(255, 255, 255, 0.5)';
        }

        function validarFormularioAnuncio(formData) {
            const errores = [];
            
            const nombreEmpresa = formData.get('nombreEmpresa');
            if (!nombreEmpresa || nombreEmpresa.trim().length === 0) {
                errores.push('El nombre de la empresa es requerido');
            } else if (nombreEmpresa.length > 100) {
                errores.push('El nombre de la empresa no puede exceder 100 caracteres');
            }
            
            const representante = formData.get('representanteLegal');
            if (!representante || representante.trim().length === 0) {
                errores.push('El nombre del representante legal es requerido');
            } else if (representante.length > 100) {
                errores.push('El nombre del representante no puede exceder 100 caracteres');
            }
            
            const industria = formData.get('industria');
            if (!industria || industria === '') {
                errores.push('Debe seleccionar una industria');
            }
            
            const email = formData.get('correoElectronico');
            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            if (!email || email.trim().length === 0) {
                errores.push('El correo electrónico es requerido');
            } else if (!emailRegex.test(email)) {
                errores.push('Ingrese un correo electrónico válido');
            } else if (email.length > 150) {
                errores.push('El correo electrónico no puede exceder 150 caracteres');
            }
            
            const telefono = formData.get('telefono');
            const telefonoLimpio = telefono.replace(/\D/g, '');
            if (!telefono || telefono.trim().length === 0) {
                errores.push('El teléfono es requerido');
            } else if (telefonoLimpio.length !== 8) {
                errores.push('El teléfono debe tener 8 dígitos (formato: XXXX-XXXX)');
            }
            
            const descripcion = formData.get('descripcionEmpresa');
            if (!descripcion || descripcion.trim().length === 0) {
                errores.push('La descripción de la empresa es requerida');
            } else if (descripcion.trim().length < 10) {
                errores.push('La descripción debe tener al menos 10 caracteres');
            } else if (descripcion.length > 1000) {
                errores.push('La descripción no puede exceder 1000 caracteres');
            }
            
            return errores;
        }

        async function enviarSolicitudAnuncio(event) {
            event.preventDefault();
            
            const btn = document.getElementById('btnEnviarAnuncio');
            const mensajeDiv = document.getElementById('mensajeResultadoAnuncio');
            const formData = new FormData(event.target);
            
            const errores = validarFormularioAnuncio(formData);
            if (errores.length > 0) {
                mensajeDiv.className = 'mensaje-resultado-modal error';
                mensajeDiv.textContent = errores.join('. ');
                mensajeDiv.style.display = 'block';
                return;
            }
            
            btn.disabled = true;
            btn.textContent = 'Enviando...';
            mensajeDiv.style.display = 'none';
            
            const data = {
                nombreEmpresa: formData.get('nombreEmpresa'),
                representanteLegal: formData.get('representanteLegal'),
                industria: formData.get('industria'),
                correoElectronico: formData.get('correoElectronico'),
                telefono: formData.get('telefono'),
                descripcionEmpresa: formData.get('descripcionEmpresa')
            };

            try {
                const response = await fetch('/api/publicidad/solicitar-anuncio', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) {
                    mensajeDiv.className = 'mensaje-resultado-modal exito';
                    mensajeDiv.textContent = '¡Gracias por su interés! Hemos recibido su solicitud y nos pondremos en contacto con usted pronto para discutir las oportunidades publicitarias en AutoClick.cr.';
                    mensajeDiv.style.display = 'block';
                    
                    event.target.reset();
                    
                    setTimeout(() => {
                        cerrarModalSolicitudAnuncio();
                    }, 3000);
                } else {
                    throw new Error(result.mensaje || 'Error al procesar la solicitud');
                }
            } catch (error) {
                mensajeDiv.className = 'mensaje-resultado-modal error';
                mensajeDiv.textContent = 'Ocurrió un error al enviar la solicitud. Por favor, intente nuevamente o contáctenos directamente.';
                mensajeDiv.style.display = 'block';
            } finally {
                btn.disabled = false;
                btn.textContent = 'Enviar';
            }
        }

        document.addEventListener('click', function(event) {
            const modal = document.getElementById('modalSolicitudAnuncio');
            if (event.target === modal) {
                cerrarModalSolicitudAnuncio();
            }
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/favoritos.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>