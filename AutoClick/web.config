<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <!-- Configuración para permitir subidas de hasta 150 MB -->
      <security>
        <requestFiltering>
          <!-- maxAllowedContentLength en bytes (150 MB = 157286400 bytes) -->
          <requestLimits maxAllowedContentLength="157286400" />
        </requestFiltering>
      </security>
      
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet" 
                  arguments=".\AutoClick.dll" 
                  stdoutLogEnabled="false" 
                  stdoutLogFile=".\logs\stdout" 
                  hostingModel="inprocess"
                  requestTimeout="00:02:00" />
    </system.webServer>
  </location>
  
  <!-- Configuración adicional para ASP.NET (si se usa) -->
  <system.web>
    <!-- maxRequestLength en KB (150 MB = 153600 KB) -->
    <httpRuntime maxRequestLength="153600" executionTimeout="120" />
  </system.web>
</configuration>
